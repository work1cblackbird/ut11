	ИначеЕсли ИмяСобытия = "Запись_Файл" Тогда
		
		ОбновитьНадписьФайлыДляПередачиВБанк();
		НастроитьЗависимыеЭлементыФормы("ДатаВыгрузкиРеестра");
		
