	ПараметрыЗапроса.Вставить("Отбор", 					ОтборПоказатели);
	ПараметрыЗапроса.Вставить("ИспользоватьРасчетПоСкоростиПродаж", ИспользоватьРасчетПоСкоростиПродаж);
	
