	ПараметрыПечати = Новый Структура;
	
	ИмяМакета = "КомплектДокументов";
	ПараметрыПечати.Вставить("Идентификатор", ИмяМакета);
	ПараметрыПечати.Вставить("ЗаголовокФормы", НСтр("ru = 'Печать комплекта документов'"));
	ПараметрыПечати.Вставить("Представление", НСтр("ru = 'Печать комплекта документов'"));
	
	УправлениеПечатьюКлиент.ВыполнитьКомандуПечати(
		ИмяМенеджераПечати, ИмяМакета, Объект.Ссылка, ЭтотОбъект, ПараметрыПечати);
	
