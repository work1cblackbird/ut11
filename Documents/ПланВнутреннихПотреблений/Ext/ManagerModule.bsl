	ДопПараметр = Новый Структура();
	ДопПараметр.Вставить("Имя", 				"ФактыВнутреннихПотреблений");
	ДопПараметр.Вставить("Тип", 				Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(15, 3)));
	ДопПараметр.Вставить("Путь", 				ПутьКРеквизиту);
	ДопПараметр.Вставить("Заголовок", 			?(СоздаватьРеквизитСОтбором,
												НСтр("ru = 'Факт внутренних потреблений*'"),
												НСтр("ru = 'Факт внутренних потреблений'")));
	ДопПараметр.Вставить("СоздаватьРеквизит",	ЧтениеФактаВнутреннихПотреблений);
	ДопПараметр.Вставить("УдалятьРеквизитыТаблицы", Истина);
	
	// Общие свойства
	ДопПараметр.Вставить("СоздаватьОперанд",	ЧтениеФактаВнутреннихПотреблений);
	ДопПараметр.Вставить("ЗаголовокОперанда",	?(СоздаватьРеквизитСОтбором,
												НСтр("ru = 'Факт внутренних потреблений*'"),
												НСтр("ru = 'Факт внутренних потреблений'")));
	ДопПараметр.Вставить("ВходитВОперанд",		"ДополнительныеОперандыФакты");
	
	ДопПараметры.Вставить("ФактыВнутреннихПотреблений", ДопПараметр);
#КонецОбласти

