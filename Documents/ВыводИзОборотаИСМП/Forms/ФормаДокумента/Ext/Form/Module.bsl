	ИнтеграцияИСМП.НастроитьВидимостьКолонкиКоличестваКодовМаркировки(ЭтотОбъект);
	
	ДополнитьДоступныеОперации();
	Если ПерезаполнитьПоОснованию И ЗначениеЗаполнено(Объект.ДокументОснование) Тогда
		ПерезаполнитьПоОснованиюСервер();
	КонецЕсли;
	
	ОбновитьИнформациюОткрытияФормыПроверкиПодбора();
	ОбновлениеКешей();
	
	Если ОбщегоНазначенияИСПовтИсп.ЭтоПродукцияИСМП(Объект.ВидПродукции) Тогда
		Объект.ДатаПервичногоДокумента = НачалоДня(Объект.ДатаПервичногоДокумента);
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура ДополнитьДоступныеОперации()
	
	Если ЭтоАдресВременногоХранилища(ДанныеДокументаАдрес) Тогда
		ДанныеДокумента = ПолучитьИзВременногоХранилища(ДанныеДокументаАдрес);
		Если ДанныеДокумента.ВидПродукции = Объект.ВидПродукции
				И ЗначениеЗаполнено(ДанныеДокумента.Операция)
				И Элементы.Причина.СписокВыбора.НайтиПоЗначению(ДанныеДокумента.Операция) = Неопределено Тогда
			Операции = ИнтеграцияИСМПСлужебныйКлиентСервер.ОперацииВыводаИзОборотаПоВидуПродукции(
				Объект.ВидПродукции, Объект.ОбъемноСортовойУчет, Истина);
			ОперацияССинонимом = Операции.НайтиПоЗначению(ДанныеДокумента.Операция);
			Если ОперацияССинонимом <> Неопределено Тогда
				ПредставлениеОперации = ОперацияССинонимом.Представление;
			КонецЕсли;
			Элементы.Причина.СписокВыбора.Добавить(ДанныеДокумента.Операция, ПредставлениеОперации);
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

