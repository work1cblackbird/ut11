		Возврат;
	КонецЕсли;
	
	Наименование = СтрШаблон(НСтр("ru = '%1 от %2, %3'"), НомерДоговора, Формат(ДатаДоговора, "ДЛФ=D"), Строка(Контрагент));
	ИнтеграцияИСПереопределяемый.ПередЗаписьюОбъекта(ЭтотОбъект, Отказ);
	
