	Если ИТСПодключен Тогда
		ОбновитьСтатусРосаккредитацииНаСервере();
		Если Не ПустаяСтрока(ИдентификаторЗаданияЗапросРосаккредитации) Тогда
			ПодключитьОбработчикОжидания("Подключаемый_ОбновитьСтатусРосаккредитацииНаКлиенте", 1, Истина);
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

&НаСервере
Процедура ОбновитьСтатусРосаккредитацииНаСервере()
	
	Если Не ЗначениеЗаполнено(Объект.Ссылка) Тогда
		Возврат;
	КонецЕсли;
	
	Если Не РаботаСНоменклатурой.СервисАккредитацииДоступен() Тогда
		Возврат;
	КонецЕсли;
	
	Объект.СтатусРосаккредитации = Перечисления.СтатусыСертификатовНоменклатурыРосаккредитации.ПустаяСсылка();
	Объект.СсылкаНаСертификатРосаккредитации = "";
	
	Модифицированность = Истина;
	
	ОбновитьТекстыРосаккредитации();
	УстановитьТекстРосаккредитацияДетальнаяИнформация(Неопределено);
	УстановитьВидимостьДоступностьРосаккредитации();
	
	ПараметрыВыполнения = ДлительныеОперации.ПараметрыВыполненияВФоне(УникальныйИдентификатор);
	ПараметрыВыполнения.ЗапуститьВФоне = Истина;
	ПараметрыВыполнения.ОжидатьЗавершение = 0;
	
	РезультатРасчета = Неопределено;
	РезультатРасчета = ДлительныеОперации.ВыполнитьФункцию(ПараметрыВыполнения,
															"НоменклатураЛокализация.ЗапроситьИнформациюУРосаккредитации",
															Объект.Номер,
															Объект.ДатаНачалаСрокаДействия,
															Объект.ДатаОкончанияСрокаДействия,
															Объект.ТипСертификата,
															Истина);
	
	Если РезультатРасчета <> Неопределено
		И РезультатРасчета.Статус = "Выполняется" Тогда
		ИдентификаторЗаданияЗапросРосаккредитации = РезультатРасчета.ИдентификаторЗадания;
		АдресРезультатаЗапросРосаккредитации = РезультатРасчета.АдресРезультата;
	ИначеЕсли РезультатРасчета <> Неопределено
		И РезультатРасчета.Статус = "Выполнено" Тогда
		АдресРезультатаЗапросРосаккредитации = РезультатРасчета.АдресРезультата;
		ОбновитьСтатусРосаккредитацииРезультатНаСервере(Истина);
	КонецЕсли;

КонецПроцедуры

&НаСервере
Процедура ОбновитьСтатусРосаккредитацииРезультатНаСервере(ВыполнениеПроверено = Ложь)
	
	Ответ = Неопределено;
	Если ВыполнениеПроверено
		Или Не ПустаяСтрока(ИдентификаторЗаданияЗапросРосаккредитации)
			И ДлительныеОперации.ЗаданиеВыполнено(Новый УникальныйИдентификатор(ИдентификаторЗаданияЗапросРосаккредитации)) Тогда
		ИдентификаторЗаданияЗапросРосаккредитации = "";
		Ответ = ПолучитьИзВременногоХранилища(АдресРезультатаЗапросРосаккредитации);
		Если Не ПустаяСтрока(Ответ.ТекстОшибки) Тогда
			Объект.СтатусРосаккредитации = Перечисления.СтатусыСертификатовНоменклатурыРосаккредитации.ПустаяСсылка();
			Объект.СсылкаНаСертификатРосаккредитации = "";
			Объект.ДатаОбновленияСтатусаРосаккредитации = ТекущаяДатаСеанса();
		Иначе
			Объект.СтатусРосаккредитации = НоменклатураЛокализация.СтатусРосаккредитацииИзСтроки(Ответ.Статус);
			Объект.СсылкаНаСертификатРосаккредитации = Ответ.Гиперссылка;
			Объект.ДатаОбновленияСтатусаРосаккредитации = ТекущаяДатаСеанса();
			
			ШтрихкодыПоДаннымРосаккредитации.Очистить();
			ШтрихкодыПоДаннымРосаккредитации.ЗагрузитьЗначения(Ответ.Штрихкоды);
			
			ТНВЭДПоДаннымРосаккредитации.Очистить();
			ТНВЭДПоДаннымРосаккредитации.ЗагрузитьЗначения(Ответ.ТНВЭД);
		КонецЕсли;
		
		УстановитьВидимостьДоступностьРосаккредитации();
		УстановитьТекстРосаккредитацияДетальнаяИнформация(Ответ);
		ОбновитьТекстыРосаккредитации();
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура УстановитьТекстРосаккредитацияДетальнаяИнформация(ДетальнаяИнформация = Неопределено)
	
	ШаблонПереносСтроки = Символы.ПС;
	ШаблонИдетЗапросИнформации = НСтр("ru='Идет запрос информации...'");
	ШаблонНеНайдено = НСтр("ru='<b>Не найдено.</b>'");
	ШаблонНетИнформации = НСтр("ru='<b>Нет информации.</b>'");
	ШаблонСтатус = НСтр("ru='<b>Статус:</b> %1'");
	ШаблонИзготовитель = НСтр("ru='<b>Изготовитель:</b> %1'");
	ШаблонПродукция = НСтр("ru='<b>Продукция:</b> %1'");
	ШаблонЗаявитель= НСтр("ru='<b>Заявитель:</b> %1'");
	ШаблонТехническиеРегламенты = НСтр("ru='<b>Технические регламенты:</b> %1'");
	ШаблонКодыТНВЭД = НСтр("ru='<b>Коды ТН ВЭД:</b> %1'");
	ШаблонШтрихкоды = НСтр("ru='<b>Штрихкоды (GTIN):</b> %1'");
	ШаблонСтрокаСОтступом = НСтр("ru = '%1'") + Символы.ПС;
	
	НаборИнформации = Новый Массив();
	Если ДетальнаяИнформация = Неопределено Тогда
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(ШаблонИдетЗапросИнформации));
	ИначеЕсли Не ПустаяСтрока(ДетальнаяИнформация.ТекстОшибки) Тогда
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(ШаблонНеНайдено));
	Иначе
		
		Производители = Новый Массив();
		Для Каждого Изготовитель Из ДетальнаяИнформация.НаименованиеИзготовителя Цикл
			Производители.Добавить(СтрШаблон(ШаблонСтрокаСОтступом, Изготовитель));
		КонецЦикла;
		
		ТехническиеРегламенты = Новый Массив();
		Для Каждого ТехническийРегламент Из ДетальнаяИнформация.ТехническиеРегламенты Цикл
			ТехническиеРегламенты.Добавить(СтрШаблон(ШаблонСтрокаСОтступом, ТехническийРегламент));
		КонецЦикла;
		
		ТНВЭД = Новый Массив();
		Для Каждого СтрокаТНВЭД Из ДетальнаяИнформация.ТНВЭД Цикл
			Если ЗначениеЗаполнено(СокрЛП(СтрокаТНВЭД)) Тогда
				ТНВЭД.Добавить(СтрШаблон(ШаблонСтрокаСОтступом, СтрокаТНВЭД));
			КонецЕсли;
		КонецЦикла;
		
		Штрихкоды = Новый Массив();
		Для Каждого Штрихкод Из ДетальнаяИнформация.Штрихкоды Цикл
			Если ЗначениеЗаполнено(СокрЛП(Штрихкод)) Тогда
				Штрихкоды.Добавить(СтрШаблон(ШаблонСтрокаСОтступом, Штрихкод));
			КонецЕсли;
		КонецЦикла;
		
		СтатусСтрокой = Строка(Объект.СтатусРосаккредитации);
		Если ПустаяСтрока(СтатусСтрокой) Тогда
			СтатусСтрокой = ШаблонНетИнформации;
		КонецЕсли;
		
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(
			ШаблонСтатус, СтатусСтрокой));
		НаборИнформации.Добавить(ШаблонПереносСтроки);
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(
			ШаблонИзготовитель, СтрСоединить(Производители)));
		НаборИнформации.Добавить(ШаблонПереносСтроки);
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(
			ШаблонПродукция, ДетальнаяИнформация.НаименованиеПродукции));
		НаборИнформации.Добавить(ШаблонПереносСтроки);
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(
			ШаблонЗаявитель, ДетальнаяИнформация.НаименованиеЗаявителя));
		НаборИнформации.Добавить(ШаблонПереносСтроки);
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(
			ШаблонТехническиеРегламенты, ?(ТехническиеРегламенты.Количество() > 0,
				СтрСоединить(ТехническиеРегламенты),
				ШаблонНетИнформации)));
		НаборИнформации.Добавить(ШаблонПереносСтроки);
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(
			ШаблонКодыТНВЭД, ?(ТНВЭД.Количество() > 0,
				СтрСоединить(ТНВЭД),
				ШаблонНетИнформации)));
		НаборИнформации.Добавить(ШаблонПереносСтроки);
		НаборИнформации.Добавить(СтроковыеФункции.ФорматированнаяСтрока(
			ШаблонШтрихкоды, ?(Штрихкоды.Количество() > 0,
				СтрСоединить(Штрихкоды),
				ШаблонНетИнформации)));
		
	КонецЕсли;		
	РосаккредитацияДетальнаяИнформация.УстановитьФорматированнуюСтроку(Новый ФорматированнаяСтрока(НаборИнформации));
	
КонецПроцедуры

