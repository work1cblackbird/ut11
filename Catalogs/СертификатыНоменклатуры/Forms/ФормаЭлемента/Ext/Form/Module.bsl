	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ВТКодыТНВЭД КАК ВыбранныеКодыТНВЭД
	|		ПО ВыбранныеКодыТНВЭД.Ссылка = ВидыНоменклатуры.КодТНВЭД
	|	
	|	ОБЪЕДИНИТЬ ВСЕ
	|	
	|	ВЫБРАТЬ
	|		Штрихкоды.Номенклатура КАК Номенклатура,
	|		Штрихкоды.Номенклатура.ИспользованиеХарактеристик В (
	|			ЗНАЧЕНИЕ(Перечисление.ВариантыИспользованияХарактеристикНоменклатуры.ИндивидуальныеДляНоменклатуры),
	|			ЗНАЧЕНИЕ(Перечисление.ВариантыИспользованияХарактеристикНоменклатуры.ОбщиеДляВидаНоменклатуры),
	|			ЗНАЧЕНИЕ(Перечисление.ВариантыИспользованияХарактеристикНоменклатуры.ОбщиеСДругимВидомНоменклатуры )
	|		) КАК ХарактеристикиИспользуются,
	|		Штрихкоды.Номенклатура.ВидНоменклатуры КАК ВидНоменклатуры,
	|		Штрихкоды.Номенклатура.ВидНоменклатуры.ИспользоватьСерии КАК СерииИспользуются,
	|		Штрихкоды.Характеристика КАК Характеристика
	|	ИЗ
	|		РегистрСведений.ШтрихкодыНоменклатуры КАК Штрихкоды
	|	ГДЕ
	|		Штрихкоды.Штрихкод В (&ШтрихкодыРосаккредитации)
	|		И Штрихкоды.Номенклатура.КодТНВЭД В (&КодыТНВЭДРосаккредитации)
	|		И Штрихкоды.Номенклатура.ВестиУчетСертификатовНоменклатуры
	|	) КАК Набор
	|";
	
	Запрос.УстановитьПараметр("КодыТНВЭДРосаккредитации", ТНВЭДПоДаннымРосаккредитации.ВыгрузитьЗначения());
	Запрос.УстановитьПараметр("ШтрихкодыРосаккредитации", ШтрихкодыПоДаннымРосаккредитации.ВыгрузитьЗначения());
	
	ДанныеДляЗаполнения = Запрос.Выполнить().Выгрузить();
	
	ЗаполненКонкретныйТовар = ВариантОбластиДействия = "КонкретныйТовар" И ЗначениеЗаполнено(Номенклатура);
	ЗаполненВидНоменклатуры = ВариантОбластиДействия = "ВидНоменклатуры" И ЗначениеЗаполнено(ВидНоменклатуры);
	
	ШаблонКонкретныйТоварОтличаетсяНоменклатура = НСтр("ru='Подобрана номенклатура %1, которая отличается от уже выбранной %2. Переключить область действия на ""список товаров"" и заполнить?'");
	ШаблонКонкретныйТоварОтличаетсяХарактеристика = НСтр("ru='Подобрана характеристика %1, которая отличается от уже выбранной %2. Переключить область действия на ""список товаров"" и заполнить?'");
	ШаблонВидНоменклатурыОтличаетсяВидНоменклатуры = НСтр("ru='Подобран вид номенклатуры %1, который отличается от выбранного %2. Переключить область действия на ""список товаров"" и заполнить?'");
	ШаблонВыбраноНесколькоЗаписей = НСтр("ru='Подобрано несколько записей (%1 шт.). Переключить область действия на ""список товаров"" и заполнить?'");
	
	ТекстСообщения = "";
	ДанныеИзменены = Ложь;
	
	Если ДанныеДляЗаполнения.Количество() > 0 Тогда
		Если ВариантОбластиДействия = "СписокТоваров" Тогда
			ЗаполнитьОбластьДействияНаСервереПоДаннымДляЗаполнения(ДанныеДляЗаполнения);
			ДанныеИзменены = Истина;
		ИначеЕсли ВариантОбластиДействия = "ВидНоменклатуры" Тогда
			Если ЗаполненВидНоменклатуры
				И ДанныеДляЗаполнения.Количество() = 1 Тогда
				Строка = ДанныеДляЗаполнения[0];
				Если Строка.ВидНоменклатуры <> ВидНоменклатуры Тогда
					ТекстСообщения = СтрШаблон(ШаблонВидНоменклатурыОтличаетсяВидНоменклатуры, Строка.ВидНоменклатуры, ВидНоменклатуры);
				КонецЕсли;
			ИначеЕсли Не ЗаполненВидНоменклатуры
				И ДанныеДляЗаполнения.Количество() = 1 Тогда
				Строка = ДанныеДляЗаполнения[0];
				ВидНоменклатуры = Строка.ВидНоменклатуры;
				ХарактеристикиИспользуются = Строка.ХарактеристикиИспользуются;
				СерииИспользуются = Строка.СерииИспользуются;
				ВидНоменклатурыПриИзмененииНаСервере();
				ДанныеИзменены = Истина;
			Иначе
				ТекстСообщения = СтрШаблон(ШаблонВыбраноНесколькоЗаписей, ДанныеДляЗаполнения.Количество());
			КонецЕсли;
		ИначеЕсли ВариантОбластиДействия = "КонкретныйТовар" Тогда
			Если ЗаполненКонкретныйТовар
				И ДанныеДляЗаполнения.Количество() = 1 Тогда
				Строка = ДанныеДляЗаполнения[0];
				Если Строка.Номенклатура <> Номенклатура Тогда
					ТекстСообщения = СтрШаблон(ШаблонКонкретныйТоварОтличаетсяНоменклатура, Строка.Номенклатура, Номенклатура);
				ИначеЕсли Строка.Номенклатура = Номенклатура
					И Строка.Характеристика <> Характеристика Тогда
					ТекстСообщения = СтрШаблон(ШаблонКонкретныйТоварОтличаетсяХарактеристика, Строка.Номенклатура, Номенклатура);
				КонецЕсли;
			ИначеЕсли Не ЗаполненКонкретныйТовар
				И ДанныеДляЗаполнения.Количество() = 1 Тогда
				Строка = ДанныеДляЗаполнения[0];
				Если ЗначениеЗаполнено(Строка.Номенклатура) Тогда
					Номенклатура = Строка.Номенклатура;
					Характеристика = Строка.Характеристика;
					ХарактеристикиИспользуются = Строка.ХарактеристикиИспользуются;
					СерииИспользуются = Строка.СерииИспользуются;
					НоменклатураПриИзмененииСервер();
					ДанныеИзменены = Истина;
				ИначеЕсли ЗначениеЗаполнено(Строка.ВидНоменклатуры) Тогда
					ВариантОбластиДействия = "ВидНоменклатуры";
					ВидНоменклатуры = Строка.ВидНоменклатуры;
					ХарактеристикиИспользуются = Строка.ХарактеристикиИспользуются;
					СерииИспользуются = Строка.СерииИспользуются;
					ВидНоменклатурыПриИзмененииНаСервере();
					ДанныеИзменены = Истина;
				КонецЕсли;
			Иначе
				ТекстСообщения = СтрШаблон(ШаблонВыбраноНесколькоЗаписей, ДанныеДляЗаполнения.Количество());
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	ОтветФункции = Новый Структура();
	ОтветФункции.Вставить("ТекстСообщения", ТекстСообщения);
	ОтветФункции.Вставить("ДанныеИзменены", ДанныеИзменены);
	
	Если Не ПустаяСтрока(ТекстСообщения) Тогда
		АдресРезультатаЗаполненияПоДаннымРосаккредитации = ПоместитьВоВременноеХранилище(ДанныеДляЗаполнения,
			УникальныйИдентификатор);
		Возврат ОтветФункции;
	Иначе
		Возврат ОтветФункции;
	КонецЕсли;
	
КонецФункции

&НаКлиенте
Процедура ЗаполнитьПоДаннымРосаккредитацииЗавершение(РезультатВопроса, ДополнительныеПараметры) Экспорт
	
	Ответ = РезультатВопроса;
	Если Ответ = КодВозвратаДиалога.Да Тогда
		ВариантОбластиДействия = "СписокТоваров";
		
		ОбработатьИзменениеВариантаОбластиДействия();
		ЗаполнитьОбластьДействияНаСервереПоДаннымВременногоХранилища();
		
		ПоказатьОповещениеПользователя(
			НСтр("ru = 'Заполнение завершено'"),
			,
			,
			БиблиотекаКартинок.Информация32);
	КонецЕсли;

КонецПроцедуры

&НаСервере
Процедура ЗаполнитьОбластьДействияНаСервереПоДаннымВременногоХранилища()
	ДанныеДляЗаполнения = ПолучитьИзВременногоХранилища(АдресРезультатаЗаполненияПоДаннымРосаккредитации);
	ЗаполнитьОбластьДействияНаСервереПоДаннымДляЗаполнения(ДанныеДляЗаполнения);
	НоменклатураПриИзмененииСервер();
КонецПроцедуры

&НаСервере
Процедура ЗаполнитьОбластьДействияНаСервереПоДаннымДляЗаполнения(ДанныеДляЗаполнения)
	Если ДанныеДляЗаполнения.Количество() > 0 Тогда
		Для Каждого Строка Из ДанныеДляЗаполнения Цикл
			НоваяСтрока = ОбластьДействия.Добавить();
			НоваяСтрока.ВидНоменклатуры = Строка.ВидНоменклатуры;
			НоваяСтрока.Номенклатура = Строка.Номенклатура;
			НоваяСтрока.Характеристика = Строка.Характеристика;
			НоваяСтрока.ХарактеристикиИспользуются = Строка.ХарактеристикиИспользуются;
			НоваяСтрока.СерииИспользуются = Строка.СерииИспользуются;
		КонецЦикла;
		ОбластьДействияДляСвертки = ОбластьДействия.Выгрузить();
		ОбластьДействияДляСвертки.Свернуть("ВидНоменклатуры, Номенклатура, Характеристика, ХарактеристикиИспользуются, Серия, СерииИспользуются");
		ОбластьДействия.Загрузить(ОбластьДействияДляСвертки);
		
		СтрокиКУдалению = ОбластьДействия.НайтиСтроки(Новый Структура("ВидНоменклатуры, Номенклатура",
			Справочники.ВидыНоменклатуры.ПустаяСсылка(), Справочники.Номенклатура.ПустаяСсылка()));
		Для Каждого Строка Из СтрокиКУдалению Цикл
			ОбластьДействия.Удалить(Строка);
		КонецЦикла;
	КонецЕсли;
КонецПроцедуры

&НаСервере
Процедура ОбновитьТекстыРосаккредитации()
	
	ШаблонСтатусДействителен = НСтр("ru='<span style=""color: ЦветТекстаУспех; font: ВажнаяНадписьШрифт"">%1</span> (актуально на: %2)'");
	ШаблонСтатусНеДействителен = НСтр("ru='<span style=""color: ЦветШрифтаОшибки; font: ВажнаяНадписьШрифт"">%1</span> (актуально на: %2)'");
	ШаблонСтатусНетИнформации = НСтр("ru='<span style=""font: ВажнаяНадписьШрифт"">Нет информации</span>'");
	
	ДействительныеСтатусыРосаккредитации = НоменклатураКлиентСерверЛокализация.ДействительныеСтатусыРосаккредитации();
	
	ДатаОбновленияСтатусаРосаккредитацииСтрокой = Формат(Объект.ДатаОбновленияСтатусаРосаккредитации, "ДЛФ=D; ДП=-;");
	
	Если Не ЗначениеЗаполнено(Объект.СтатусРосаккредитации) Тогда
		СтатусРосаккредитацияПодробно = СтроковыеФункции.ФорматированнаяСтрока(ШаблонСтатусНетИнформации);
	ИначеЕсли ДействительныеСтатусыРосаккредитации.Найти(Объект.СтатусРосаккредитации) <> Неопределено Тогда
		СтатусРосаккредитацияПодробно = СтроковыеФункции.ФорматированнаяСтрока(ШаблонСтатусДействителен, Объект.СтатусРосаккредитации, ДатаОбновленияСтатусаРосаккредитацииСтрокой);
	Иначе
		СтатусРосаккредитацияПодробно = СтроковыеФункции.ФорматированнаяСтрока(ШаблонСтатусНеДействителен, Объект.СтатусРосаккредитации, ДатаОбновленияСтатусаРосаккредитацииСтрокой);
	КонецЕсли;
	
	ШаблонПерейтиНаСтраницуСертификата = НСтр("ru='перейти на страницу сертификата'");
	ШаблонПерейтиНаСтраницуДекларации = НСтр("ru='перейти на страницу декларации'");
	
	Элементы.ГиперссылкаНаСертификатРосаккредитации.Заголовок = ?(Объект.ТипСертификата = НСтр("ru = 'Сертификат соответствия'"),
																	ШаблонПерейтиНаСтраницуСертификата,
																	ШаблонПерейтиНаСтраницуДекларации);
	
КонецПроцедуры

