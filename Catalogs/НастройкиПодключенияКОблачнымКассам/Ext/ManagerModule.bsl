// Определяет наличие настроек подключения к Облачной кассе.
//
// Возвращаемое значение:
//  Булево - если Истина, есть настройки подключения.
//
Функция ЕстьНастройкиПодключения() Экспорт
	
	Запрос = Новый Запрос();
	Запрос.Текст =
	"ВЫБРАТЬ ПЕРВЫЕ 1
	|	ИСТИНА КАК Признак
	|ИЗ
	|	Справочник.НастройкиПодключенияКОблачнымКассам КАК НастройкиПодключенияКОблачнымКассам";
	
	Возврат Не Запрос.Выполнить().Пустой();
	
КонецФункции

// Выполняет поиск настройки подключения к Облачной кассе.
//
// Параметры:
//  ЗначениеПоиска - ОпределяемыйТип.ОблачнаяКасса - ссылка на элемент справочника для которого настроена интеграция с
//    Облачной кассой.
//                 - СправочникСсылка.НастройкиПодключенияКОблачнымКассам
//
// Возвращаемое значение:
//  Неопределено - настройка не найдена.
//  Структура:
//    * Ссылка - СправочникСсылка.НастройкиПодключенияКОблачнымКассам
//    * Идентификатор - Строка
//
Функция НастройкаПодключения(ЗначениеПоиска) Экспорт
	
	Результат = Неопределено;
	
	Если Не ЗначениеЗаполнено(ЗначениеПоиска) Тогда
		Возврат Результат;
	КонецЕсли;
	
	Запрос = Новый Запрос();
	Запрос.УстановитьПараметр("ЗначениеПоиска", ЗначениеПоиска);
	
	Если ТипЗнч(ЗначениеПоиска) = Тип("СправочникСсылка.НастройкиПодключенияКОблачнымКассам") Тогда
		Запрос.Текст =
		"ВЫБРАТЬ
		|	НастройкиПодключенияКОблачнымКассам.Ссылка КАК Ссылка,
		|	НастройкиПодключенияКОблачнымКассам.Идентификатор КАК Идентификатор
		|ИЗ
		|	Справочник.НастройкиПодключенияКОблачнымКассам КАК НастройкиПодключенияКОблачнымКассам
		|ГДЕ
		|	НастройкиПодключенияКОблачнымКассам.Ссылка = &ЗначениеПоиска";
	Иначе
		Запрос.Текст =
		"ВЫБРАТЬ
		|	НастройкиПодключенияКОблачнымКассам.Ссылка КАК Ссылка,
		|	НастройкиПодключенияКОблачнымКассам.Идентификатор КАК Идентификатор
		|ИЗ
		|	Справочник.НастройкиПодключенияКОблачнымКассам КАК НастройкиПодключенияКОблачнымКассам
		|ГДЕ
		|	НастройкиПодключенияКОблачнымКассам.ОблачнаяКасса = &ЗначениеПоиска";
	КонецЕсли;
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		
		Результат = Новый Структура();
		Результат.Вставить("Ссылка"       , Выборка.Ссылка);
		Результат.Вставить("Идентификатор", Выборка.Идентификатор);
		
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

