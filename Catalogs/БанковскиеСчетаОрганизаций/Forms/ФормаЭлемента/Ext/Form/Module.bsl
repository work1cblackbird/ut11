		И ЗначениеЗаполнено(Объект.НаименованиеБанкаМеждународное) 
		И НЕ ЗначениеЗаполнено(Объект.СтранаБанка) Тогда
		ОбщегоНазначенияКлиент.СообщитьПользователю(
			НСтр("ru = 'Не заполнена страна банка в ручных реквизитах банка'"), , "Банк", "Объект", НеДобавлять); 
	КонецЕсли;
	
	Если НеДобавлять Тогда
		Возврат;
	КонецЕсли;
	
	ОбработчикОповещения = Новый ОписаниеОповещения("ПослеСозданияНастройкиОбменаBankFeeds", ЭтотОбъект);
	
	Если Объект.РучноеИзменениеРеквизитовБанка Тогда
		
		ТекущийБанк = Объект.Ссылка;
		
	Иначе
		
		ТекущийБанк = Объект.Банк;	
		
	КонецЕсли;	
	
	ПараметрыФормы = Новый Структура;
	ПараметрыФормы.Вставить("Организация", Объект.Владелец);
	ПараметрыФормы.Вставить("Банк", ТекущийБанк);
	ПараметрыФормы.Вставить("БанковскийСчет", Объект.Ссылка);
	
	ОткрытьФорму("РегистрСведений.ПодключенияКБанкамBankFeeds.Форма.ФормаПодключения", ПараметрыФормы, , , , ,
		ОбработчикОповещения);

