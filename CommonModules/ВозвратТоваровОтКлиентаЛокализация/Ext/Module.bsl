		|	ЧекККМ.НалогообложениеНДС         КАК НалогообложениеНДС,
		|
		|	ВЫБОР КОГДА ЧекККМ.Статус = ЗНАЧЕНИЕ(Перечисление.СтатусыЧековККМ.Пробит) ТОГДА ЛОЖЬ ИНАЧЕ ИСТИНА КОНЕЦ КАК ЕстьОшибкиСтатус,
		|
		|	ЧекККМ.Серии.(
		|		Номенклатура                                 КАК Номенклатура,
		|		Характеристика                               КАК Характеристика,
		|		Серия                                        КАК Серия,
		|		Количество                                   КАК Количество
		|	) КАК Серии
		|
		|ИЗ
		|	Документ.ЧекККМ КАК ЧекККМ
		|		ЛЕВОЕ СОЕДИНЕНИЕ Документ.ОтчетОРозничныхПродажах КАК ОтчетОРозничныхПродажах
		|		ПО ЧекККМ.КассоваяСмена = ОтчетОРозничныхПродажах.КассоваяСмена
		|ГДЕ
		|	ЧекККМ.Ссылка = &ДокументОснование");
		
	Запрос.УстановитьПараметр("ДокументОснование", ДокументОснование);
	ДанныеЧекККМ = Запрос.Выполнить().Выбрать();
	ДанныеЧекККМ.Следующий();
		
	МассивДопустимыхСтатусов = Новый Массив();
	МассивДопустимыхСтатусов.Добавить(Перечисления.СтатусыЧековККМ.Пробит);
	
	ОбщегоНазначенияУТ.ПроверитьВозможностьВводаНаОсновании(
		ДанныеЧекККМ.Ссылка,
		ДанныеЧекККМ.Статус,
		,
		ДанныеЧекККМ.ЕстьОшибкиСтатус,
		МассивДопустимыхСтатусов);
	
	ПроверитьВозможностьВводаНаОснованииЧекККМ(Объект, ДанныеЧекККМ);
	
	ЗаполнитьЗначенияСвойств(Объект, ДанныеЧекККМ, , "Ссылка,Проведен");
	Объект.ЧекККМ = ДанныеЧекККМ.Ссылка;
		
	ПартнерыИКонтрагенты.ЗаполнитьКонтрагентаПартнераПоУмолчанию(Объект.Партнер, Объект.Контрагент);
	
	ПродажиСервер.ЗаполнитьВозвращаемыеТоварыПоЧеку(Объект, "Товары");
	
	Если Объект.Товары.Количество() = 0 Тогда
		ТекстОшибки = НСтр("ru='По данному чеку ККМ нет товаров для возврата или все товары уже возвращены.'");
		ВызватьИсключение ТекстОшибки;
	КонецЕсли;
	
	ДокументРеализации = РозничныеПродажи.ПолучитьОтчетОРозничныхПродажахПоЧекуККМ(ДокументОснование);
	
	Для Каждого ТекСтрока Из Объект.Товары Цикл
		
		ТекСтрока.ДокументРеализации = ДокументРеализации;
		ТекСтрока.СпособОпределенияСебестоимости = ?(ЗначениеЗаполнено(ТекСтрока.ДокументРеализации),
			Перечисления.СпособыОпределенияСебестоимостиВозврата.ИзДокументаПродажи,
			Перечисления.СпособыОпределенияСебестоимостиВозврата.ИзТекущегоДокумента);
			
	КонецЦикла;
	
	Объект.Серии.Загрузить(ДанныеЧекККМ.Серии.Выгрузить());
	
КонецПроцедуры

Процедура ПроверитьВозможностьВводаНаОснованииЧекККМ(Объект, ЧекККМ, Отказ = Неопределено)
	
	Если ТипЗнч(ЧекККМ) = Тип("ДокументСсылка.ЧекККМ") Тогда
		ДанныеЧекККМ = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ЧекККМ, "Проведен,Статус,Ссылка,КассоваяСмена");
	Иначе
		ДанныеЧекККМ = ЧекККМ;
	КонецЕсли;

	ДатаДляПроверкиСтатусаКассовойСмены = ?(ЗначениеЗаполнено(Объект.Ссылка), Объект.Дата, ТекущаяДатаСеанса());

	ТекстОшибки = "";
	Если Не ДанныеЧекККМ.Проведен Тогда
		ТекстОшибки = НСтр("ru='Чек ККМ не проведен. Ввод на основании невозможен.'");
	ИначеЕсли ДанныеЧекККМ.Статус <> Перечисления.СтатусыЧековККМ.Пробит Тогда
		ТекстОшибки = НСтр("ru='Чек ККМ не пробит. Ввод на основании невозможен.'");
	ИначеЕсли РозничныеПродажи.СменаОткрыта(ДанныеЧекККМ.КассоваяСмена, ДатаДляПроверкиСтатусаКассовойСмены) Тогда
		ТекстОшибки = НСтр("ru='Кассовая смена открыта! Ввод на основании чека документа ""Возврат товаров от клиента"" при открытой кассовой смене запрещен.'");
	ИначеЕсли Документы.ЧекККМКоррекции.ЕстьКоррекцияПоЧекуККМ(ДанныеЧекККМ.Ссылка) Тогда
		ТекстОшибки =  НСтр("ru = 'По Чеку ККМ введен Чек ККМ коррекции. Ввод на основании чека документа ""Возврат товаров от клиента"" запрещен.'");
	ИначеЕсли Документы.ЧекККМВозврат.ЕстьВозвратПоЧекуККМ(ДанныеЧекККМ.Ссылка) Тогда
		ТекстОшибки =  НСтр("ru = 'По Чеку ККМ введен Чек ККМ на возврат. Ввод на основании чека документа ""Возврат товаров от клиента"" запрещен.'");
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ТекстОшибки) Тогда
		Если Отказ = Неопределено Тогда
			ВызватьИсключение ТекстОшибки;
		Иначе
			ОбщегоНазначения.СообщитьПользователю(ТекстОшибки,,,,Отказ);
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

