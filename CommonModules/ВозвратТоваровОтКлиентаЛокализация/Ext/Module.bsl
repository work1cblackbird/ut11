	Запрос.УстановитьПараметр("ЦенаВключаетНДС",           РеквизитыДокумента.ЦенаВключаетНДС);
	Запрос.УстановитьПараметр("ТребуетсяЗалогЗаТару",      РеквизитыДокумента.ПредусмотренЗалогЗаТару);
	Запрос.УстановитьПараметр("ВернутьМногооборотнуюТару", РеквизитыДокумента.ВозвратПереданнойМногооборотнойТары);
	
