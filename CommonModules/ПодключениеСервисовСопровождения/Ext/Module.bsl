//
Процедура СоздатьЭлементыПодключенияТестовогоПериода(Форма, ДополнительныеПараметры)
	
	Элементы = Форма.Элементы;
	Команды = Форма.Команды;
	
	ЭлементДляРазмещенияТестовыхПериодов = Элементы[ДополнительныеПараметры.ИмяЭлементаДляРазмещения];
	ЭлементГруппаОсновная = Элементы.Добавить(
		ИмяЭлемента("ГруппаОсновная"),
		Тип("ГруппаФормы"),
		ЭлементДляРазмещенияТестовыхПериодов);
	ЭлементГруппаОсновная.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ЭлементГруппаОсновная.Группировка = ГруппировкаПодчиненныхЭлементовФормы.ГоризонтальнаяВсегда;
	ЭлементГруппаОсновная.ОтображатьЗаголовок = Ложь;
	
	ЭлементКартинкаСервиса = Элементы.Добавить(
		ИмяЭлемента("КартинкаСервиса"),
		Тип("ДекорацияФормы"),
		ЭлементГруппаОсновная);
	ЭлементКартинкаСервиса.Вид = ВидДекорацииФормы.Картинка;
	
	ЭлементГруппаПодключение = Элементы.Добавить(
		ИмяЭлемента("ГруппаПодключение"),
		Тип("ГруппаФормы"),
		ЭлементГруппаОсновная);
	ЭлементГруппаПодключение.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ЭлементГруппаПодключение.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;
	ЭлементГруппаПодключение.ОтображатьЗаголовок = Ложь;
	
	ЭлементОписаниеСервиса = Элементы.Добавить(
		ИмяЭлемента("ОписаниеСервиса"),
		Тип("ДекорацияФормы"),
		ЭлементГруппаПодключение);
	ЭлементОписаниеСервиса.Заголовок = "";
	ЭлементОписаниеСервиса.Вид = ВидДекорацииФормы.Надпись;
	
	ЭлементСтраницыПодключения = Элементы.Добавить(
		ИмяЭлемента("СтраницыПодключения"),
		Тип("ГруппаФормы"),
		ЭлементГруппаПодключение);
	ЭлементСтраницыПодключения.Вид = ВидГруппыФормы.Страницы;
	ЭлементСтраницыПодключения.ОтображениеСтраниц = ОтображениеСтраницФормы.Нет;
	
	ЭлементГруппаДоступныеТестовыеПериоды = Элементы.Добавить(
		ИмяЭлемента("ГруппаДоступныеТестовыеПериоды"),
		Тип("ГруппаФормы"),
		ЭлементСтраницыПодключения);
	ЭлементГруппаДоступныеТестовыеПериоды.Вид = ВидГруппыФормы.Страница;
	ЭлементГруппаДоступныеТестовыеПериоды.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;
	
	ПараметрыСтраницы = ПараметрыСозданияСтраницы();
	ПараметрыСтраницы.ИмяСтраницы = "ГруппаДлительнаяОперация";
	ПараметрыСтраницы.Родитель = ЭлементСтраницыПодключения;
	ПараметрыСтраницы.ИмяЭлементаКартинки = "ДекорацияДлительнаяОперация";
	ПараметрыСтраницы.Картинка = БиблиотекаКартинок.ДлительнаяОперация48;
	ПараметрыСтраницы.ИмяЭлементаНадписи = "ДекорацияПодпись";
	ПараметрыСтраницы.ТекстНадписи = НСтр("ru = 'Подключение сервиса на тестовый период,
		|пожалуйста, подождите...'");
	СоздатьСтраницу(Форма, ПараметрыСтраницы);
	
	ПараметрыСтраницы = ПараметрыСозданияСтраницы();
	ПараметрыСтраницы.ИмяСтраницы = "ГруппаПодключенТестовыйПериод";
	ПараметрыСтраницы.Родитель = ЭлементСтраницыПодключения;
	ПараметрыСтраницы.ИмяЭлементаКартинки = "ДекорацияПодключенТестовыйПериод";
	ПараметрыСтраницы.Картинка = БиблиотекаКартинок.Успешно32;
	ПараметрыСтраницы.ИмяЭлементаНадписи = "ДекорацияНадписьПодключен";
	ПараметрыСтраницы.ТекстНадписи = НСтр("ru = 'Сервис успешно подключен.'");
	СоздатьСтраницу(Форма, ПараметрыСтраницы);
	
	ПараметрыСтраницы = ПараметрыСозданияСтраницы();
	ПараметрыСтраницы.ИмяСтраницы = "ГруппаОшибка";
	ПараметрыСтраницы.Родитель = ЭлементСтраницыПодключения;
	ПараметрыСтраницы.ИмяЭлементаКартинки = "ДекорацияОшибка";
	ПараметрыСтраницы.Картинка = БиблиотекаКартинок.Ошибка32;
	ПараметрыСтраницы.ИмяЭлементаНадписи = "ДекорацияИнформацияОбОшибке";
	ПараметрыСтраницы.ТекстНадписи = "";
	СоздатьСтраницу(Форма, ПараметрыСтраницы);

	ПараметрыСтраницы = ПараметрыСозданияСтраницы();
	ПараметрыСтраницы.ИмяСтраницы = "ГруппаОшибкаТаймаут";
	ПараметрыСтраницы.Родитель = ЭлементСтраницыПодключения;
	ПараметрыСтраницы.ИмяЭлементаКартинки = "ДекорацияОшибкаТаймаут";
	ПараметрыСтраницы.Картинка = БиблиотекаКартинок.Предупреждение32;
	ПараметрыСтраницы.ИмяЭлементаНадписи = "ДекорацияПодписьОшибкаТаймаут";
	ПараметрыСтраницы.ТекстНадписи = НСтр("ru = 'Запрос на подключение сервиса отправлен. Ожидайте подтверждение подключения.'");
	СоздатьСтраницу(Форма, ПараметрыСтраницы);
	
	КомандаПодключения = Команды.Добавить("Подключаемый_КомандаПодключенияТестовогоПериода");
	КомандаПодключения.Действие = "Подключаемый_КомандаПодключенияТестовогоПериода";
	КомандаПодключения.Заголовок = НСтр("ru = 'Подключить'");
	
	ЭлементКомандаПодключения = Элементы.Добавить(
		ИмяЭлемента("Подключить"),
		Тип("КнопкаФормы"),
		Элементы[ДополнительныеПараметры.ИмяЭлементаДляРазмещенияКнопок]);
	ЭлементКомандаПодключения.ИмяКоманды = "Подключаемый_КомандаПодключенияТестовогоПериода";
	ЭлементКомандаПодключения.Видимость = Ложь;
	ДополнительныеПараметры.ИмяЭлементаКомандыДалее = ЭлементКомандаПодключения.Имя;
	
КонецПроцедуры

// Создаются элементы страницы для отображения подключения тестового периода.
//
// Параметры:
//  Форма - ФормаКлиентскогоПриложения - форма подключения тестового периода;
// ПараметрыСоздания - Структура - см. ПараметрыСозданияСтраницы.
//
Процедура СоздатьСтраницу(
		Форма,
		ПараметрыСоздания)
	
	Элементы = Форма.Элементы;
	
	ЭлементСтраница = Элементы.Добавить(
		ИмяЭлемента(ПараметрыСоздания.ИмяСтраницы),
		Тип("ГруппаФормы"),
		ПараметрыСоздания.Родитель);
	ЭлементСтраница.Вид = ВидГруппыФормы.Страница;
	ЭлементСтраница.Группировка = ГруппировкаПодчиненныхЭлементовФормы.ГоризонтальнаяВсегда;
	
	ЭлементДекорацияКартинка = Элементы.Добавить(
		ИмяЭлемента(ПараметрыСоздания.ИмяЭлементаКартинки),
		Тип("ДекорацияФормы"),
		ЭлементСтраница);
	ЭлементДекорацияКартинка.Вид = ВидДекорацииФормы.Картинка;
	ЭлементДекорацияКартинка.Картинка = ПараметрыСоздания.Картинка;
	
	ЭлементДекорацияНадпись = Элементы.Добавить(
		ИмяЭлемента(ПараметрыСоздания.ИмяЭлементаНадписи),
		Тип("ДекорацияФормы"),
		ЭлементСтраница);
	ЭлементДекорацияНадпись.Заголовок = ПараметрыСоздания.ТекстНадписи;
	ЭлементДекорацияНадпись.Вид = ВидДекорацииФормы.Надпись;
	ЭлементДекорацияНадпись.ВертикальноеПоложениеВГруппе = ВертикальноеПоложениеЭлемента.Центр;
	
