	ПараметрыКонвертации.ВалютаРеглУчета = ВалютаРеглУчета;
	
	РассчитатьПараметрыКонвертации(ПараметрыКонвертации, ИмяРеквизита);
	ЗаполнитьЗначенияСвойств(Объект, ПараметрыКонвертации);
	
