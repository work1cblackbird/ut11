	НоваяСтрока.ТекстВыполнить = НСтр("ru = 'Перепровести'");
	НоваяСтрока.ДействиеИспользование = ЗакрытиеМесяцаСервер.ОписаниеДействия_СервернаяПроцедура(
		"ДенежныеСредстваСервер.Использование_ПроверкаКурсовЗачетаВАвансовыхОтчетах");
	НоваяСтрока.ДействиеВыполнить = ЗакрытиеМесяцаСервер.ОписаниеДействия_КлиентскаяПроцедура(
		"ДенежныеСредстваКлиент.Выполнить_ПроверкаКурсовЗачетаВАвансовыхОтчетах");
	
КонецПроцедуры

// Обработчики этапа
// 
// Параметры:
// 	ПараметрыОбработчика - см. ЗакрытиеМесяцаСервер.ИнициализироватьПараметрыОбработчикаЭтапаЗакрытияМесяцаДляПроверки
//
Процедура Использование_ПроверкаКурсовЗачетаВАвансовыхОтчетах(ПараметрыОбработчика) Экспорт
	
	ЗакрытиеМесяцаСервер.УвеличитьКоличествоОбработанныхДанныхДляЗамера(ПараметрыОбработчика, 1);
	
	Запрос = Новый Запрос;
	ЗакрытиеМесяцаСервер.ИнициализироватьЗапрос(Запрос, ПараметрыОбработчика);
	Запрос.УстановитьПараметр("ВалютаУпр", Константы.ВалютаУправленческогоУчета.Получить());
	
	ТекстыЗапроса = ТекстыЗапросаПроверкаКурсовЗачетаВАвансовыхОтчетах();
	
	ЭлементСписка = ТекстыЗапроса.Получить(ТекстыЗапроса.Количество()-1);
	ЭлементСписка.Значение = СтрЗаменить(ЭлементСписка.Значение,
		"ВЫБРАТЬ", //@query-part
		"ВЫБРАТЬ ПЕРВЫЕ 1"); //@query-part
	ЭлементСписка.Значение = СтрЗаменить(ЭлементСписка.Значение, "ПОМЕСТИТЬ ТаблицаПроверкаКурсовЗачетаВАвансовыхОтчетах", "");
	
	Результат = ОбщегоНазначенияУТ.ВыполнитьПакетЗапросов(Запрос, ТекстыЗапроса);
	
	Если Результат[Результат.ВГраница()].Пустой() Тогда
		
		ЗакрытиеМесяцаСервер.УстановитьСостояниеНеТребуется(
			ПараметрыОбработчика,
			НСтр("ru='Нет некорректных зачетов валютных авансов подотчетным лицам.'", ОбщегоНазначения.КодОсновногоЯзыка()));
	Иначе
		ЗакрытиеМесяцаСервер.УстановитьСостояниеВыполненСОшибками(
			ПараметрыОбработчика,
			НСтр("ru='Обнаружены некорректные зачеты валютных авансов подотчетным лицам. Требуется перепровести авансовые отчеты.'", ОбщегоНазначения.КодОсновногоЯзыка()),,
			ЗакрытиеМесяцаСервер.ОписаниеДействия_ОткрытьФорму(Метаданные.Обработки.ЖурналДокументовАвансовыеОтчеты.Формы.СписокДокументов.ПолноеИмя()),
			Перечисления.ВажностьПроблемыУчета.Предупреждение);
	КонецЕсли;
	
КонецПроцедуры

// Обработчики этапа
// 
// Параметры:
// 	ПараметрыОбработчика - см. ЗакрытиеМесяцаСервер.ИнициализироватьПараметрыОбработчикаЭтапаЗакрытияМесяцаДляПроверки
//
// Возвращаемое значение:
//	Булево - Признак завершения обработки
//
Функция Выполнить_ПроверкаКурсовЗачетаВАвансовыхОтчетах(ПараметрыРасчета) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("НачалоПериода", ПараметрыРасчета.НачалоПериода);
	Запрос.УстановитьПараметр("КонецПериода", ПараметрыРасчета.КонецПериода);
	Запрос.УстановитьПараметр("МассивОрганизаций", ПараметрыРасчета.МассивОрганизаций);
	Запрос.УстановитьПараметр("ВалютаУпр", Константы.ВалютаУправленческогоУчета.Получить());
	
	ТекстыЗапроса = ТекстыЗапросаПроверкаКурсовЗачетаВАвансовыхОтчетах();
	
	ТекстЗапроса = "
	|ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	ТаблицаПроверкаКурсовЗачетаВАвансовыхОтчетах.Регистратор КАК Регистратор
	|ИЗ
	|	ТаблицаПроверкаКурсовЗачетаВАвансовыхОтчетах
	|АВТОУПОРЯДОЧИВАНИЕ
	|";
	ТекстыЗапроса.Добавить(ТекстЗапроса);
	
	Результат = ОбщегоНазначенияУТ.ВыполнитьПакетЗапросов(Запрос, ТекстыЗапроса);
	
	Выборка = Результат[Результат.ВГраница()].Выбрать();
	Пока Выборка.Следующий() Цикл
		
		НачатьТранзакцию();
		
		Попытка
			
			ДокументОбъект = Выборка.Регистратор.ПолучитьОбъект();
			
			Попытка
				ДокументОбъект.Заблокировать();
			Исключение
				ТекстСообщения = СтрШаблон(
					НСтр("ru = 'Документ %1 находится в процессе редактирования пользователем или системой и не может быть изменен.'"),
					ДокументОбъект);
				ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);
				Продолжить;
			КонецПопытки;
			
			ДокументОбъект.ДополнительныеСвойства.Вставить("ПроверкаДатыЗапретаИзменения", Ложь);
			ДокументОбъект.Записать(РежимЗаписиДокумента.Проведение);
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			
			ИнформацияОбОшибке = ИнформацияОбОшибке();
			ТекстСообщения = НСтр("ru = 'Не удалось записать документ по причине: %1'");
			ТекстСообщения = СтрШаблон(ТекстСообщения, КраткоеПредставлениеОшибки(ИнформацияОбОшибке));
			ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);
			
			ТекстОшибки = НСтр("ru = 'Не удалось записать документ.'", ОбщегоНазначения.КодОсновногоЯзыка());
			ЗаписьЖурналаРегистрации(
				ТекстОшибки,
				УровеньЖурналаРегистрации.Ошибка,,,
				ПодробноеПредставлениеОшибки(ИнформацияОбОшибке));
		КонецПопытки;
	КонецЦикла;
	
	Возврат Истина;
	
КонецФункции

