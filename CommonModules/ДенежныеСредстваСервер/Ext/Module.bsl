		|	ЛицевыеСчета.ЛицевойСчет.НомерСчета
		|
		|ОБЪЕДИНИТЬ ВСЕ
		|
		|ВЫБРАТЬ
		|	ЛицевыеСчета.ФизическоеЛицо,
		|	ЛицевыеСчета.ЛицевойСчет,
		|	ЛицевыеСчета.ЛицевойСчет.НомерСчета,
		|	СУММА(ЛицевыеСчета.Сумма)
		|ИЗ
		|	Документ.СписаниеБезналичныхДенежныхСредств.ЛицевыеСчетаСотрудников КАК ЛицевыеСчета
		|ГДЕ
		|	ЛицевыеСчета.Ссылка В(&Ссылка)
		|
		|СГРУППИРОВАТЬ ПО
		|	ЛицевыеСчета.ФизическоеЛицо,
		|	ЛицевыеСчета.ЛицевойСчет,
		|	ЛицевыеСчета.ЛицевойСчет.НомерСчета
		|
		|ОБЪЕДИНИТЬ ВСЕ
		|
		|ВЫБРАТЬ
		|	ЛицевыеСчета.Сотрудник,
		|	ЛицевыеСчета.ЛицевойСчет,
		|	ЛицевыеСчета.ЛицевойСчет.НомерСчета,
		|	СУММА(ЛицевыеСчета.Сумма)
		|ИЗ
		|	Документ.ЗаявкаНаКомандировку.ВыдачаПодОтчет КАК ЛицевыеСчета
		|ГДЕ
		|	ЛицевыеСчета.Ссылка В(&Ссылка)
		|
		|СГРУППИРОВАТЬ ПО
		|	ЛицевыеСчета.Сотрудник,
		|	ЛицевыеСчета.ЛицевойСчет,
		|	ЛицевыеСчета.ЛицевойСчет.НомерСчета";
	
	Запрос = Новый Запрос;
	Запрос.Текст = ТекстЗапроса;
	Запрос.УстановитьПараметр("Ссылка", ДокументыИсточники);
	
	УстановитьПривилегированныйРежим(Истина);
	ДанныеДокумента = Запрос.Выполнить().Выгрузить();
	УстановитьПривилегированныйРежим(Ложь);
	
	Если ТипЗнч(Объект) = Тип("ДокументОбъект.ПодтверждениеЗачисленияЗарплаты") Тогда
		ИмяКолонкиСчета = "НомерЛицевогоСчета";
	Иначе
		ИмяКолонкиСчета = "ЛицевойСчет";
	КонецЕсли;
	
	ДанныеТабличнойЧасти = Объект[ИмяТабличнойЧастиОбъекта].Выгрузить(, "ФизическоеЛицо, Сумма, " + ИмяКолонкиСчета);
	ДанныеТабличнойЧасти.Свернуть("ФизическоеЛицо," + ИмяКолонкиСчета, "Сумма");
	
	Для Каждого СтрокаТаблицы Из ДанныеТабличнойЧасти Цикл
		
		Отбор = Новый Структура("ФизическоеЛицо," + ИмяКолонкиСчета);
		ЗаполнитьЗначенияСвойств(Отбор, СтрокаТаблицы);
		
		ТаблицаПоФизЛицу = ДанныеДокумента.Скопировать(Отбор);
		
		Если ТаблицаПоФизЛицу.Количество() = 0 Тогда
			
			ОшибочныеСтроки = Объект[ИмяТабличнойЧастиОбъекта].НайтиСтроки(Отбор);
			
			Для Каждого СтрокаТабличнойЧасти Из ОшибочныеСтроки Цикл
				
				Если ТипЗнч(Объект) = Тип("ДокументОбъект.ПодтверждениеЗачисленияЗарплаты") Тогда
					СтрокаСообщения = СтрШаблон(НСтр("ru = 'В строке №%1 указан сотрудник с лицевым счетом, отсутствующий в первичном документе.'"),
										СтрокаТабличнойЧасти["НомерСтроки"]);
				Иначе
					СтрокаСообщения = СтрШаблон(НСтр("ru = 'В строке №%1 указан сотрудник с лицевым счетом, отсутствующий в заявке.'"),
										СтрокаТабличнойЧасти["НомерСтроки"]);
				КонецЕсли;
				
				Поле = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти(ИмяТабличнойЧастиОбъекта, СтрокаТабличнойЧасти["НомерСтроки"], "ФизическоеЛицо");
				
				Если ФлагОбменСБанками Тогда
					ДобавитьОшибкуЗаполнения(ОшибкиЗаполнения, СтрокаСообщения);
				Иначе
					ОбщегоНазначения.СообщитьПользователю(СтрокаСообщения, Объект, Поле, , Отказ);
				КонецЕсли;
				
			КонецЦикла;
			
			Продолжить;
			
		КонецЕсли;
		
		Если ТипЗнч(Объект) = Тип("ДокументОбъект.ПодтверждениеЗачисленияЗарплаты") Тогда
		
			Если СтрокаТаблицы.Сумма <> ТаблицаПоФизЛицу.Итог("Сумма") Тогда
				
				ОшибочныеСтроки = Объект[ИмяТабличнойЧастиОбъекта].НайтиСтроки(Отбор);
				
				Для Каждого СтрокаТабличнойЧасти Из ОшибочныеСтроки Цикл
					
					СтрокаСообщения = СтрШаблон(НСтр("ru = 'Сумма, зачисленная по сотруднику %1, не совпадает с суммой первичного документа.'"),
									СтрокаТаблицы.ФизическоеЛицо);
					Поле = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти(ИмяТабличнойЧастиОбъекта, СтрокаТабличнойЧасти["НомерСтроки"], "Сумма");
					
					Если ФлагОбменСБанками Тогда
						ДобавитьОшибкуЗаполнения(ОшибкиЗаполнения, СтрокаСообщения);
					Иначе
						ОбщегоНазначения.СообщитьПользователю(СтрокаСообщения, Объект, Поле, , Отказ);
					КонецЕсли;
					
				КонецЦикла;
				
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

