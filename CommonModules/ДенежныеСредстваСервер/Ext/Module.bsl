//      4 - наименование сокращенное организации,
//      5 - наименование полное организации,
//      6 - наименование международное организации,
//      7 - КПП организации.
//
Функция СведенияОПолучателеПлательщикеПоДокументам(СписокДокументов) Экспорт

	Если СписокДокументов.Количество() = 0 Тогда
		Возврат ПустаяТаблицаСведенийОПолучателеПлательщике();
	КонецЕсли;
	
	ЗапросДанныхДокументов = Новый Запрос;
	ЗапросДанныхДокументов.Текст =
		"ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	РеестрДокументов.Ссылка КАК Ссылка,
		|	РеестрДокументов.ДатаДокументаИБ КАК Дата,
		|	РеестрДокументов.Организация КАК Организация,
		|	ВЫБОР
		|		КОГДА РеестрДокументов.Контрагент = ЗНАЧЕНИЕ(Справочник.КлючиРеестраДокументов.ПустаяСсылка)
		|		 ТОГДА РеестрДокументов.Организация
		|		ИНАЧЕ КлючиРеестраДокументов.Ключ
		|	КОНЕЦ КАК Контрагент

		|ИЗ
		|	РегистрСведений.РеестрДокументов КАК РеестрДокументов
		|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.КлючиРеестраДокументов КАК КлючиРеестраДокументов
		|		ПО РеестрДокументов.Контрагент = КлючиРеестраДокументов.Ссылка
		|ГДЕ
		|	РеестрДокументов.Ссылка В(&МассивДокументов)
		|";
	
	ЗапросДанныхДокументов.УстановитьПараметр("МассивДокументов", СписокДокументов);
	Результат = ЗапросДанныхДокументов.Выполнить();
	
	Если Результат.Пустой() Тогда
		
		ДанныеДокументов = НоваяТаблицаСторонДокументаПоСписку(СписокДокументов);
		
		Для Каждого ТекущийДокумент Из СписокДокументов Цикл
			
			НоваяСтрока = ДанныеДокументов.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, ТекущийДокумент);
			
		КонецЦикла;
	
	Иначе
		ДанныеДокументов = Результат.Выгрузить();
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Текст =
		"ВЫБРАТЬ
		|	ДанныеДокументов.Ссылка КАК Ссылка,
		|	ДанныеДокументов.Дата КАК Дата,
		|	ДанныеДокументов.Организация КАК Организация,
		|	ДанныеДокументов.Контрагент КАК Контрагент
		|ПОМЕСТИТЬ ТаблицаДокументов
		|ИЗ
		|	&ДанныеДокументов КАК ДанныеДокументов
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.НаименованиеСокращенное, Организации.НаименованиеСокращенное) КАК НаименованиеСокращенное,
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.НаименованиеПолное, Организации.НаименованиеПолное) КАК НаименованиеПолное,
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.НаименованиеМеждународное, Организации.НаименованиеМеждународное) КАК НаименованиеМеждународное,
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.Период, ДАТАВРЕМЯ(1, 1, 1)) КАК НачалоДействия,
		|	ТаблицаДокументов.Ссылка КАК Документ
		|ПОМЕСТИТЬ ИсторияНаименованийОрганизаций
		|ИЗ
		|	ТаблицаДокументов КАК ТаблицаДокументов
		|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.Организации.ИсторияНаименований КАК ОрганизацииИсторияНаименований
		|		ПО ТаблицаДокументов.Организация = ОрганизацииИсторияНаименований.Ссылка
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Организации КАК Организации
		|		ПО ТаблицаДокументов.Организация = Организации.Ссылка
		|ГДЕ
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.Период, ДАТАВРЕМЯ(1, 1, 1)) <= ТаблицаДокументов.Дата
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	ЕСТЬNULL(КонтрагентыИсторияНаименований.СокращенноеНаименование, Контрагенты.НаименованиеПолное) КАК ЗначениеРеквизита,
		|	ЕСТЬNULL(КонтрагентыИсторияНаименований.Период, ДАТАВРЕМЯ(1, 1, 1)) КАК НачалоДействия,
		|	ТаблицаДокументов.Ссылка КАК Документ,
		|	0 КАК Признак
		|ПОМЕСТИТЬ ИсторияЗначенийРеквизитов
		|ИЗ
		|	ТаблицаДокументов КАК ТаблицаДокументов
		|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.Контрагенты.ИсторияНаименований КАК КонтрагентыИсторияНаименований
		|		ПО ТаблицаДокументов.Контрагент = КонтрагентыИсторияНаименований.Ссылка
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Контрагенты КАК Контрагенты
		|		ПО ТаблицаДокументов.Контрагент = Контрагенты.Ссылка
		|ГДЕ
		|	ЕСТЬNULL(КонтрагентыИсторияНаименований.Период, ДАТАВРЕМЯ(1, 1, 1)) <= ТаблицаДокументов.Дата
		|
		|ОБЪЕДИНИТЬ ВСЕ
		|
		|ВЫБРАТЬ
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.НаименованиеПолное, Организации.НаименованиеПолное),
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.Период, ДАТАВРЕМЯ(1, 1, 1)),
		|	ТаблицаДокументов.Ссылка,
		|	0
		|ИЗ
		|	ТаблицаДокументов КАК ТаблицаДокументов
		|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.Организации.ИсторияНаименований КАК ОрганизацииИсторияНаименований
		|		ПО ТаблицаДокументов.Контрагент = ОрганизацииИсторияНаименований.Ссылка
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Организации КАК Организации
		|		ПО ТаблицаДокументов.Контрагент = Организации.Ссылка
		|ГДЕ
		|	ЕСТЬNULL(ОрганизацииИсторияНаименований.Период, ДАТАВРЕМЯ(1, 1, 1)) <= ТаблицаДокументов.Дата
		|
		|ОБЪЕДИНИТЬ ВСЕ
		|
		|ВЫБРАТЬ
