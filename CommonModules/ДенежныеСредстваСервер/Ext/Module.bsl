			Форма.НесколькоВалютВзаиморасчетов = КопияВалютыВзаиморасчетовРасшифровки.Количество() > 1;
		КонецЕсли;
	КонецЕсли;
	ВариантыКурсаДоговора = Объект.РасшифровкаПлатежа.Выгрузить(,"ВариантКурсаДоговора, ТипОбъектаРасчетов");
	ВариантыКурсаДоговора.Свернуть("ВариантКурсаДоговора, ТипОбъектаРасчетов");
	Если ВариантыКурсаДоговора.Количество() = 1 Тогда
		Форма.ВариантКурсаДоговора = ВариантыКурсаДоговора[0].ВариантКурсаДоговора;
		Форма.ТипОбъектаРасчетов = ВариантыКурсаДоговора[0].ТипОбъектаРасчетов;
	Иначе
		Форма.ВариантКурсаДоговора = Перечисления.ВариантыКурсаДоговора.ПустаяСсылка();
		Форма.ТипОбъектаРасчетов = Перечисления.ТипыОбъектовРасчетов.ПустаяСсылка();
	КонецЕсли;
	
КонецПроцедуры

Функция НадписьВалютыИКурсПлатежа(Форма) Экспорт
	
	Объект = Форма.Объект;
	
	КопияРасшифровки = Объект.РасшифровкаПлатежа.Выгрузить(,
		"СуммаВзаиморасчетов, ВалютаВзаиморасчетов, КурсЧислительВзаиморасчетов, КурсЗнаменательВзаиморасчетов"); // ТаблицаЗначений
	КопияРасшифровки.Свернуть("ВалютаВзаиморасчетов, КурсЧислительВзаиморасчетов, КурсЗнаменательВзаиморасчетов", "СуммаВзаиморасчетов");
	
	ШаблонКурса = "(%1 %2 = %3 %4)";
	СтрокиНадписи = Новый Массив;
	СтрокиНадписи.Добавить(НСтр("ru = 'Расчеты'"));
	Для каждого СтрокаТаблицы Из КопияРасшифровки Цикл
		СтрокиНадписи.Добавить(Строка(СтрокаТаблицы.СуммаВзаиморасчетов));
		СтрокиНадписи.Добавить(Строка(СтрокаТаблицы.ВалютаВзаиморасчетов));
		
		Если СтрокаТаблицы.КурсЧислительВзаиморасчетов <> 0 Тогда
			Если Объект.Валюта = Форма.ВалютаРеглУчета Тогда
				
				СтрокиНадписи.Добавить(СтрШаблон(ШаблонКурса,
					СтрокаТаблицы.КурсЗнаменательВзаиморасчетов,
					СтрокаТаблицы.ВалютаВзаиморасчетов,
					Строка(Формат(СтрокаТаблицы.КурсЧислительВзаиморасчетов, "ЧДЦ=4")),
					Объект.Валюта));
			Иначе
				СтрокиНадписи.Добавить(СтрШаблон(ШаблонКурса,
					СтрокаТаблицы.КурсЗнаменательВзаиморасчетов,
					Объект.Валюта,
					Строка(Формат(СтрокаТаблицы.КурсЧислительВзаиморасчетов, "ЧДЦ=4")),
					СтрокаТаблицы.ВалютаВзаиморасчетов));
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	Возврат СтрСоединить(СтрокиНадписи, " ");
	
КонецФункции

Функция КурсЧислительИКурсЗнаменательВзаиморасчетов(ВалютаДокумента, ВалютаВзаиморасчетов, ВалютаРеглУчета, НаДату, ОбъектРасчетов, Договор = Неопределено) Экспорт
	
	КурсИКратность = Новый Структура;
	КурсИКратность.Вставить("КурсЧислитель", 1);
	КурсИКратность.Вставить("КурсЗнаменатель", 1);
	КурсИКратность.Вставить("ВариантКурсаДоговора", Перечисления.ВариантыКурсаДоговора.Переменный);
	КурсИКратность.Вставить("ТипОбъектаРасчетов", Перечисления.ТипыОбъектовРасчетов.ПустаяСсылка());
	
	Если ВалютаДокумента <> ВалютаВзаиморасчетов Тогда 
		
		ВариантКурсаДоговора = Перечисления.ВариантыКурсаДоговора.ПустаяСсылка();
		Если ЗначениеЗаполнено(Договор) Тогда
			ВариантКурсаДоговора = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Договор, "ВариантКурсаДоговора");
		КонецЕсли;
		
		Если ВариантКурсаДоговора = Перечисления.ВариантыКурсаДоговора.УстановленныйВДоговоре Тогда
			Если ВалютаДокумента = ВалютаРеглУчета Тогда
				КурсИКратность = РегистрыСведений.КурсыВалютРасчетовПоДоговорам.ПолучитьЗначенияКурсаВалютыДоговора(Договор, НаДату);
			Иначе
				КурсДокумента = РаботаСКурсамиВалютУТ.ПолучитьКурсВалюты(ВалютаДокумента, НаДату, ВалютаРеглУчета, ОбъектРасчетов);
				КурсВзаиморасчетов = РегистрыСведений.КурсыВалютРасчетовПоДоговорам.ПолучитьЗначенияКурсаВалютыДоговора(Договор, НаДату);
				КурсИКратность = РаботаСКурсамиВалютУТ.ПолучитьКроссКурсВалют(КурсДокумента,КурсВзаиморасчетов);
			КонецЕсли;
		Иначе
			Если ВалютаДокумента = ВалютаРеглУчета Тогда
				КурсИКратность = РаботаСКурсамиВалютУТ.ПолучитьКурсВалюты(ВалютаВзаиморасчетов, НаДату, ВалютаРеглУчета,ОбъектРасчетов);
			ИначеЕсли ВалютаВзаиморасчетов = ВалютаРеглУчета Тогда
				КурсИКратность = РаботаСКурсамиВалютУТ.ПолучитьКурсВалюты(ВалютаДокумента, НаДату, ВалютаРеглУчета, ОбъектРасчетов);
			Иначе
				КурсДокумента = РаботаСКурсамиВалютУТ.ПолучитьКурсВалюты(ВалютаДокумента, НаДату, ВалютаРеглУчета, ОбъектРасчетов);
				КурсВзаиморасчетов = РаботаСКурсамиВалютУТ.ПолучитьКурсВалюты(ВалютаВзаиморасчетов, НаДату, ВалютаРеглУчета, ОбъектРасчетов);
				КурсИКратность = РаботаСКурсамиВалютУТ.ПолучитьКроссКурсВалют(КурсДокумента,КурсВзаиморасчетов);
			КонецЕсли;
		КонецЕсли;
		
		Запрос = Новый Запрос;
		Запрос.УстановитьПараметр("ОбъектРасчетов", ОбъектРасчетов);
		Запрос.Текст = 
			"ВЫБРАТЬ
			|	ОбъектыРасчетов.ТипОбъектаРасчетов КАК ТипОбъектаРасчетов,
			|	ЕСТЬNULL(
			|		ОбъектыРасчетов.Договор.ВариантКурсаДоговора, 
			|		ЗНАЧЕНИЕ(Перечисление.ВариантыКурсаДоговора.Переменный)) КАК ВариантКурсаДоговора
			|ИЗ
			|	Справочник.ОбъектыРасчетов КАК ОбъектыРасчетов
			|ГДЕ
			|	ОбъектыРасчетов.Ссылка = &ОбъектРасчетов";
		
		УстановитьПривилегированныйРежим(Истина);
		Выборка = Запрос.Выполнить().Выбрать();
		УстановитьПривилегированныйРежим(Ложь);
		
		Если Выборка.Следующий() Тогда
			КурсИКратность.Вставить("ВариантКурсаДоговора", Выборка.ВариантКурсаДоговора);
			КурсИКратность.Вставить("ТипОбъектаРасчетов", Выборка.ТипОбъектаРасчетов);
		Иначе
			КурсИКратность.Вставить("ВариантКурсаДоговора", Перечисления.ВариантыКурсаДоговора.Переменный);
			КурсИКратность.Вставить("ТипОбъектаРасчетов", Перечисления.ТипыОбъектовРасчетов.ПустаяСсылка());
		КонецЕсли; 
		
		Если ЗначениеЗаполнено(ВариантКурсаДоговора) Тогда
			КурсИКратность.ВариантКурсаДоговора = ВариантКурсаДоговора;
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат КурсИКратность;
	
