// Возвращает получателя платежа документа оплаты по хозяйственной операции.
// 
// Параметры:
//  ХозяйственнаяОперация - ПеречислениеСсылка.ХозяйственныеОперации - хозяйственная операция.
//  ДанныеДокумента - Структура - Данные документа.
// 
// Возвращаемое значение:
//  Массив из СправочникСсылка.Контрагенты, Неопределено, СправочникСсылка.Контрагенты, СправочникСсылка.ФизическиеЛица - Получатель по хозяйственной операции.
Функция ПолучательПлатежа(ДанныеДокумента) Экспорт

	Получатель = Неопределено;
	
	Если ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ВыдачаДенежныхСредствПодотчетнику
		Или ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ВыдачаЗаймаСотруднику Тогда
		Получатель = ДанныеДокумента.ПодотчетноеЛицо;
	ИначеЕсли ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ОплатаДенежныхСредствВДругуюОрганизацию
		Или ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ВозвратДенежныхСредствВДругуюОрганизацию
		Или ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ВнутренняяПередачаДенежныхСредств Тогда
		
		Если ДанныеДокумента.ФормаОплаты = Перечисления.ФормыОплаты.Безналичная Тогда
			Получатель = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ДанныеДокумента.БанковскийСчетПолучатель, "Владелец");
		ИначеЕсли ДанныеДокумента.ФормаОплаты = Перечисления.ФормыОплаты.Наличная Тогда
			Получатель = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ДанныеДокумента.КассаПолучатель, "Владелец");
		КонецЕсли;
		
	ИначеЕсли ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ОплатаПоставщику
		И ДанныеДокумента.ОперацияССамозанятым = Истина Тогда
		Получатель = ПолучательПоЗаявкамНаОплатуСамозанятым(ДанныеДокумента);
	Иначе
		Получатель = ДанныеДокумента.Контрагент;
	КонецЕсли;
	
	Возврат Получатель;

КонецФункции

// Проверяет порядок расчетов договора и очищает неподходящие значения
// 
// Параметры:
//  ДанныеДокумента - ДокументОбъект, ДанныеФормыСтруктура - платежный документ
//  ИдентификаторСтроки - Число - Идентификатор текущей строки расшифровки платежа
Процедура ПроверитьЗаполнитьДоговор(ДанныеДокумента, ИдентификаторСтроки = Неопределено) Экспорт
	
	Если Не ЭтоХозяйственнаяОперацияОплатыПоРасчетам(ДанныеДокумента.ХозяйственнаяОперация) Тогда
		Возврат;
	КонецЕсли;
	
	СуммаНеРаспределено = НераспределенныйОстатокПлатежа(ДанныеДокумента);
	
	Если СуммаНеРаспределено = 0 Тогда
		Если ДанныеДокумента.РасшифровкаПлатежа.Количество() >= 1 Тогда
			МассивОбъектовРасчетов = ДанныеДокумента.РасшифровкаПлатежа.Выгрузить(,"ОбъектРасчетов").ВыгрузитьКолонку("ОбъектРасчетов");
			МассивОбъектовРасчетов = ОбщегоНазначенияКлиентСервер.СвернутьМассив(МассивОбъектовРасчетов);
			УстановитьПривилегированныйРежим(Истина);
			ДоговорыОбъектовРасчетов = ОбщегоНазначения.ЗначениеРеквизитаОбъектов(
				МассивОбъектовРасчетов,
				"Договор");
			МассивДоговоров = ОбщегоНазначенияУТКлиентСервер.ПреобразоватьСоответствиеИлиСтруктуруВМассив(ДоговорыОбъектовРасчетов, Ложь);
			// Если есть пустые объекты расчетов, то договор в шапке не нужно заполнять единственным заполненным, добавим пустой договрр в массив
			Для Каждого ОбъектРасчетов Из МассивОбъектовРасчетов Цикл
				Если Не ЗначениеЗаполнено(ОбъектРасчетов) Тогда
					МассивДоговоров.Добавить(Справочники.ДоговорыКонтрагентов.ПустаяСсылка());
				КонецЕсли;
			КонецЦикла;
			МассивДоговоров = ОбщегоНазначенияКлиентСервер.СвернутьМассив(МассивДоговоров);
			ПорядкиРасчетовДоговоров = ОбщегоНазначения.ЗначениеРеквизитаОбъектов(
				МассивДоговоров,
				"ПорядокРасчетов");
			УстановитьПривилегированныйРежим(Ложь);
			Если МассивДоговоров.Количество() = 1 Тогда
				ДанныеДокумента.Договор = МассивДоговоров[0];
			ИначеЕсли ДанныеДокумента.СуммаДокумента <> 0 Тогда 
				ДанныеДокумента.Договор = Неопределено;
			КонецЕсли;
			Если ИдентификаторСтроки <> Неопределено Тогда 
				СтрокаРасшифровки = ДанныеДокумента.РасшифровкаПлатежа.НайтиПоИдентификатору(ИдентификаторСтроки);
				Если ДоговорыОбъектовРасчетов[СтрокаРасшифровки.ОбъектРасчетов] <> СтрокаРасшифровки.Договор
					Или Не ЗначениеЗаполнено(СтрокаРасшифровки.ОбъектРасчетов)
						И (ПорядкиРасчетовДоговоров[СтрокаРасшифровки.Договор] = Перечисления.ПорядокРасчетов.ПоДоговорамКонтрагентов
							Или ПорядкиРасчетовДоговоров[СтрокаРасшифровки.Договор]  = Перечисления.ПорядокРасчетов.ПоДоговорамНакладным) Тогда
					// Очистим договор в табличной части
					СтрокаРасшифровки.Договор = Неопределено;
					// Если в других строках был заполнен один договор, то необходимо очистить договор шапки
					Если МассивДоговоров.Количество() = 1
						И ЗначениеЗаполнено(МассивДоговоров[0]) Тогда
						ДанныеДокумента.Договор = Неопределено;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	Иначе
		ОбъектыРасчетов = ОбъектыРасчетовСервер.ВсеОбъектыРасчетовПоСсылке(ДанныеДокумента.Ссылка);
		Если ЗначениеЗаполнено(ДанныеДокумента.Договор) Тогда
			УстановитьПривилегированныйРежим(Истина);
			ПорядокРасчетовДоговора = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ДанныеДокумента.Договор, "ПорядокРасчетов");
			УстановитьПривилегированныйРежим(Ложь);
			Если ПорядокРасчетовДоговора = Перечисления.ПорядокРасчетов.ПоДоговорамКонтрагентов
				Или ПорядокРасчетовДоговора = Перечисления.ПорядокРасчетов.ПоДоговорамНакладным Тогда
				ДанныеДокумента.Договор = Неопределено;
				Если ИдентификаторСтроки <> Неопределено Тогда
					СтрокаРасшифровки = ДанныеДокумента.РасшифровкаПлатежа.НайтиПоИдентификатору(ИдентификаторСтроки);
					Если Не ЗначениеЗаполнено(СтрокаРасшифровки.ОбъектРасчетов)
						Или ОбъектыРасчетов.Найти(СтрокаРасшифровки.ОбъектРасчетов) <> Неопределено Тогда
						СтрокаРасшифровки.Договор = Неопределено;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
		Если ИдентификаторСтроки <> Неопределено Тогда
			СтрокаРасшифровки = ДанныеДокумента.РасшифровкаПлатежа.НайтиПоИдентификатору(ИдентификаторСтроки);
			Если ЗначениеЗаполнено(СтрокаРасшифровки.Договор) Тогда
				УстановитьПривилегированныйРежим(Истина);
				ПорядокРасчетовДоговора = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(СтрокаРасшифровки.Договор, "ПорядокРасчетов");
				УстановитьПривилегированныйРежим(Ложь);
				Если (Не ЗначениеЗаполнено(СтрокаРасшифровки.ОбъектРасчетов) 
					Или ОбъектыРасчетов.Найти(СтрокаРасшифровки.ОбъектРасчетов) <> Неопределено)
						И (ПорядокРасчетовДоговора = Перечисления.ПорядокРасчетов.ПоДоговорамКонтрагентов
							Или ПорядокРасчетовДоговора = Перечисления.ПорядокРасчетов.ПоДоговорамНакладным) Тогда
						СтрокаРасшифровки.Договор = Неопределено;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

// Проверяет объекты расчетов и основания платежа на соответствие выбранному договору
// 
// Параметры:
//  ДанныеДокумента - ДокументОбъект, ДанныеФормыКоллекция - платежный документ
//  ИдентификаторСтроки - Число - Идентификатор текущей строки расшифровки платежа
Процедура ПроверитьЗаполнитьОбъектРасчетов(ДанныеДокумента, ИдентификаторСтроки = Неопределено) Экспорт
	
	Если Не ЭтоХозяйственнаяОперацияОплатыПоРасчетам(ДанныеДокумента.ХозяйственнаяОперация) Тогда
		Возврат;
	КонецЕсли;
	
	Договор = ДанныеДокумента.Договор;
	Если ИдентификаторСтроки <> Неопределено Тогда
		Договор = ДанныеДокумента.РасшифровкаПлатежа.НайтиПоИдентификатору(ИдентификаторСтроки).Договор;
	КонецЕсли;
	Если ЗначениеЗаполнено(Договор) Тогда
		
		ПорядокРасчетовДоговора = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Договор, "ПорядокРасчетов");
		Если ПорядокРасчетовДоговора = Перечисления.ПорядокРасчетов.ПоДоговорамКонтрагентов
			Или ПорядокРасчетовДоговора = Перечисления.ПорядокРасчетов.ПоДоговорамНакладным Тогда
			
			ЭтоРасчетыСКлиентами = ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ПоступлениеДенежныхСредствИзДругойОрганизации
			                       Или ДанныеДокумента.ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ПоступлениеОплатыОтКлиента;
			ДополнительныеКритерииПоиска = ОбъектыРасчетовСервер.ДополнительныеКритерииПоиска();
			ДополнительныеКритерииПоиска.ВернутьПервый = Истина;
			ДополнительныеКритерииПоиска.Контрагент = ДанныеДокумента.Контрагент;
			ОбъектРасчетовДоговор = ОбъектыРасчетовСервер.ПолучитьОбъектРасчетовПоСсылке(
				Договор,
				ДанныеДокумента.Организация,
				?(ЭтоРасчетыСКлиентами, Перечисления.ТипыРасчетовСПартнерами.РасчетыСКлиентом, Перечисления.ТипыРасчетовСПартнерами.РасчетыСПоставщиком));
			Если ЗначениеЗаполнено(ОбъектРасчетовДоговор) Тогда
				РеквизитыОбъектаРасчетов = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ОбъектРасчетовДоговор, "Объект, Организация, Партнер, ВалютаВзаиморасчетов");
				РеквизитыОбъектаРасчетов.Вставить("ОснованиеПлатежа", РеквизитыОбъектаРасчетов.Объект);
				РеквизитыОбъектаРасчетов.Вставить("Договор", РеквизитыОбъектаРасчетов.Объект);
				РеквизитыОбъектаРасчетов.Вставить("ОбъектОбъектаРасчетов", РеквизитыОбъектаРасчетов.Объект);
				РеквизитыОбъектаРасчетов.Вставить("ОбъектРасчетовСовпадаетСДокументом", Ложь);
				
				Если ИдентификаторСтроки <> Неопределено Тогда
					СтрокаРасшифровки = ДанныеДокумента.РасшифровкаПлатежа.НайтиПоИдентификатору(ИдентификаторСтроки);
					СтрокаРасшифровки.ОбъектРасчетов = ОбъектРасчетовДоговор;
					ЗаполнитьЗначенияСвойств(СтрокаРасшифровки, РеквизитыОбъектаРасчетов);
				Иначе
					ОбъектыРасчетов = ОбъектыРасчетовСервер.ВсеОбъектыРасчетовПоСсылке(ДанныеДокумента.Ссылка);
					Для Каждого СтрокаРасшифровки Из ДанныеДокумента.РасшифровкаПлатежа Цикл
						Если Не ЗначениеЗаполнено(СтрокаРасшифровки.ОбъектРасчетов)
							Или ОбъектыРасчетов.Найти(СтрокаРасшифровки.ОбъектРасчетов) <> Неопределено Тогда
							СтрокаРасшифровки.ОбъектРасчетов = ОбъектРасчетовДоговор;
							ЗаполнитьЗначенияСвойств(СтрокаРасшифровки, РеквизитыОбъектаРасчетов);
						КонецЕсли;
					КонецЦикла;
				КонецЕсли;
			КонецЕсли;
			
		ИначеЕсли ИдентификаторСтроки = Неопределено Тогда 
		// выбрали договор через дополнительную форму - проверяем объекты расчетов всех строк
			
			СуммаНеРаспределено = НераспределенныйОстатокПлатежа(ДанныеДокумента);
			
			Если СуммаНеРаспределено = 0 Тогда
				
				ДоговорыОбъектовРасчетов = ОбщегоНазначения.ЗначениеРеквизитаОбъектов(
					ДанныеДокумента.РасшифровкаПлатежа.Выгрузить(, "ОбъектРасчетов").ВыгрузитьКолонку("ОбъектРасчетов"),
					"Договор");
				
				Для Каждого СтрокаРасшифровки Из ДанныеДокумента.РасшифровкаПлатежа Цикл
					Если ДоговорыОбъектовРасчетов[СтрокаРасшифровки.ОбъектРасчетов] <> ДанныеДокумента.Договор Тогда
						СтрокаРасшифровки.ОбъектРасчетов = Справочники.ОбъектыРасчетов.ПустаяСсылка();
						Если ОбщегоНазначенияУТ.ЕстьРеквизитТабЧастиОбъекта("ОснованиеПлатежа", ДанныеДокумента.Ссылка.Метаданные(), "РасшифровкаПлатежа") Тогда
							СтрокаРасшифровки.ОснованиеПлатежа = Неопределено;
						КонецЕсли;
						Если ОбщегоНазначенияКлиентСервер.ЕстьРеквизитИлиСвойствоОбъекта(СтрокаРасшифровки, "ОбъектОбъектаРасчетов") Тогда
							СтрокаРасшифровки.ОбъектОбъектаРасчетов = ДанныеДокумента.Ссылка;
							СтрокаРасшифровки.ОбъектРасчетовСовпадаетСДокументом = Истина;
						КонецЕсли;
					КонецЕсли;
				КонецЦикла;
				
			ИначеЕсли ОбщегоНазначенияУТ.ЕстьРеквизитТабЧастиОбъекта("ОснованиеПлатежа", ДанныеДокумента.Ссылка.Метаданные(), "РасшифровкаПлатежа") Тогда
			// Если в документе есть основание платежа с несоответствующим договором, то такое основание платежа очищаем
				
				ОснованияПлатежа = Новый Массив;
				ОбъектыРасчетов = ОбъектыРасчетовСервер.ВсеОбъектыРасчетовПоСсылке(ДанныеДокумента.Ссылка);
				Для Каждого СтрокаРасшифровки Из ДанныеДокумента.РасшифровкаПлатежа Цикл
					
					Если (Не ЗначениеЗаполнено(СтрокаРасшифровки.ОбъектРасчетов)
						Или ОбъектыРасчетов.Найти(СтрокаРасшифровки.ОбъектРасчетов) <> Неопределено)
						И ЗначениеЗаполнено(СтрокаРасшифровки.ОснованиеПлатежа) Тогда
						
						Если ТипЗнч(СтрокаРасшифровки.ОснованиеПлатежа) = Тип("СправочникСсылка.ДоговорыКонтрагентов") 
							Или ТипЗнч(СтрокаРасшифровки.ОснованиеПлатежа) = Тип("СправочникСсылка.ДоговорыМеждуОрганизациями")
							И СтрокаРасшифровки.ОснованиеПлатежа <> ДанныеДокумента.Договор Тогда
							СтрокаРасшифровки.ОснованиеПлатежа = Неопределено 
						ИначеЕсли ОбщегоНазначения.ЕстьРеквизитОбъекта("Договор" ,СтрокаРасшифровки.ОснованиеПлатежа.Метаданные()) Тогда
							ОснованияПлатежа.Добавить(СтрокаРасшифровки.ОснованиеПлатежа);
						КонецЕсли;
						
					КонецЕсли;
					
				КонецЦикла;
				
				ДоговорыОснований = ОбщегоНазначения.ЗначениеРеквизитаОбъектов(ОснованияПлатежа, "Договор");
				
				Для Каждого СтрокаРасшифровки Из ДанныеДокумента.РасшифровкаПлатежа Цикл
					Если (Не ЗначениеЗаполнено(СтрокаРасшифровки.ОбъектРасчетов)
						Или ОбъектыРасчетов.Найти(СтрокаРасшифровки.ОбъектРасчетов) <> Неопределено)
						И ЗначениеЗаполнено(СтрокаРасшифровки.ОснованиеПлатежа)
						И ДоговорыОснований[СтрокаРасшифровки.ОснованиеПлатежа] <> Неопределено
						И ДоговорыОснований[СтрокаРасшифровки.ОснованиеПлатежа] <> ДанныеДокумента.Договор Тогда
						СтрокаРасшифровки.ОснованиеПлатежа = Неопределено;
					КонецЕсли;
				КонецЦикла;
				
			КонецЕсли;
			
		КонецЕсли;
		
	ИначеЕсли ИдентификаторСтроки <> Неопределено Тогда
		
		СтрокаРасшифровки = ДанныеДокумента.РасшифровкаПлатежа.НайтиПоИдентификатору(ИдентификаторСтроки);
		СтрокаРасшифровки.ОбъектРасчетов = Справочники.ОбъектыРасчетов.ПустаяСсылка();
		Если ОбщегоНазначенияУТ.ЕстьРеквизитТабЧастиОбъекта("ОснованиеПлатежа", ДанныеДокумента.Ссылка.Метаданные(), "РасшифровкаПлатежа") Тогда
			СтрокаРасшифровки.ОснованиеПлатежа = Неопределено;
		КонецЕсли;
