		Перечисления.ТипыЭлементовРегламентаЭДО.ЭТрН_Титул3_ИОП);
		
	РегламентыЭДО.ВставитьЭлементСхемыРегламента(ЭлементыСхемы, ЭТрН_Титул3,
		Перечисления.ТипыЭлементовРегламентаЭДО.ЭТрН_ОткТ3);
		
	РегламентыЭДО.ВставитьЭлементСхемыРегламента(ЭлементыСхемы, ЭТрН_Титул5,
		Перечисления.ТипыЭлементовРегламентаЭДО.ЭТрН_Титул5_ИОП);
		
	РегламентыЭДО.ВставитьЭлементСхемыРегламента(ЭлементыСхемы, ЭТрН_Титул5,
		Перечисления.ТипыЭлементовРегламентаЭДО.ЭТрН_ОткГО);
	
