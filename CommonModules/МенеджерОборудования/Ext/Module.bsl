	Параметры = Новый Структура();
	
	Если НЕ ПустаяСтрока(ПараметрыXML) Тогда
		
		ЧтениеXML = Новый ЧтениеXML; 
		ЧтениеXML.УстановитьСтроку(ПараметрыXML);
