	ТекстЗапроса = СтрШаблон(ТекстЗапроса, МетаданныеДокумента.Имя, ИмяТабЧастиТовары);
	
	ИнтеграцияИСУТ.ОпределитьВидПродукцииТекстаЗапроса(ТекстЗапроса, "СправочникНоменклатура");
	
