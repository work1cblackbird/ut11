//     * Отбор - Структура, Неопределено - отбор для выбора из списка.
//
Функция ПараметрыВыбораЗначенияДО() Экспорт
	
	ПараметрыВыбора = Новый Структура;
	ПараметрыВыбора.Вставить("ТекстРедактирования", "");
	ПараметрыВыбора.Вставить("Представление", "");
	ПараметрыВыбора.Вставить("ЗначениеРеквизита", "");
