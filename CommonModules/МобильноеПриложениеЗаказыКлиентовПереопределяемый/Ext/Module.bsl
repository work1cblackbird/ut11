Функция ИнформацияПоСтатусамЗаказовКлиентов(ЗаказыКлиентов)
	
	ОтветныеДанные = Новый Массив;
	
	ЗаказыКлиентовИБ = РезультатЗапросаПоДокументамЗаказКлиента(ЗаказыКлиентов);
	
	Если ЗаказыКлиентовИБ.Пустой() Тогда
		Возврат ОтветныеДанные;
	КонецЕсли;
	
	ВыборкаДокументов = ЗаказыКлиентовИБ.Выбрать();
	
	Пока ВыборкаДокументов.Следующий()Цикл
		
		ЗаказКлиентаИБ = ВыборкаДокументов;
		
		СтатусСтрокой = Символы.НПП;
		Если ЗначениеЗаполнено(ЗаказКлиентаИБ.Статус) Тогда
			СтатусСтрокой = 
				МобильноеПриложениеЗаказыКлиентовПовтИсп.СоответствиеТиповСтатусыЗаказовКлиентов().Получить(ЗаказКлиентаИБ.Статус);
		КонецЕсли;
		
		СостояниеЗаказа = Новый Структура;
		СостояниеЗаказа.Вставить("Состояние", Перечисления.СостоянияЗаказовКлиентов.ПустаяСсылка());
		СостояниеЗаказа.Вставить("СостояниеПросрочено", Ложь);
		СостояниеЗаказа.Вставить("СуммаДолга", 0);
		СостояниеЗаказа.Вставить("СуммаКОплате", 0);
		
		СостояниеСтрокой = Символы.НПП;
		СостояниеСсылка = Перечисления.СостоянияЗаказовКлиентов.ПустаяСсылка();
		
		Если ЗаказКлиентаИБ.ЭтоЗаказКакСчет Тогда
			СостояниеСсылка = Перечисления.СостоянияЗаказовКлиентов.Закрыт;
		Иначе
			Документы.ЗаказКлиента.РассчитатьСостояние(ЗаказКлиентаИБ.Ссылка, ЗаказКлиентаИБ.Договор, СостояниеЗаказа);
			Если ЗначениеЗаполнено(СостояниеЗаказа.Состояние) Тогда
				СостояниеСсылка = СостояниеЗаказа.Состояние; 
			КонецЕсли;
		КонецЕсли;
		
		Если ЗначениеЗаполнено(СостояниеСсылка) Тогда
			СостояниеСтрокой = 
				МобильноеПриложениеЗаказыКлиентовПовтИсп.СоответствиеТиповСостоянияЗаказовКлиентов().Получить(СостояниеСсылка);
		КонецЕсли;
		
		Структура = Новый Структура;
		Структура.Вставить("ref", СокрЛП(ЗаказКлиентаИБ.Ссылка.УникальныйИдентификатор()));
		Структура.Вставить("Статус", СокрЛП(СтатусСтрокой)); //@NON-NLS-1
		Структура.Вставить("Проведен", ЗаказКлиентаИБ.Проведен); //@NON-NLS-1
		Структура.Вставить("ПометкаУдаления", ЗаказКлиентаИБ.ПометкаУдаления); //@NON-NLS-1
		Структура.Вставить("Состояние", СокрЛП(СостояниеСтрокой)); //@NON-NLS-1
		Структура.Вставить("Просрочен", СостояниеЗаказа.СостояниеПросрочено); //@NON-NLS-1
		Структура.Вставить("ДатаОтгрузки", ЗаказКлиентаИБ.ДатаОтгрузки); //@NON-NLS-1
		Структура.Вставить("Изменен", Ложь); //@NON-NLS-1
		
		ОбъектыПечати = Новый СписокЗначений;
		ОбъектыПечати.Добавить(ЗаказКлиентаИБ.Ссылка);
		ТекущаяСтруктураТипов = Новый Соответствие;
		ТекущаяСтруктураТипов.Вставить("Документ.ЗаказКлиента", ОбъектыПечати.ВыгрузитьЗначения());
		ТабличныйДокумент = Обработки.ПечатьЗаказовНаТоварыУслуги.СформироватьПечатнуюФормуЗаказаКлиента(
			ТекущаяСтруктураТипов, ОбъектыПечати, Неопределено);
			
		Для каждого Рисунок Из ТабличныйДокумент.Рисунки Цикл
			Если Рисунок.Имя = "КартинкаШтрихкода" Тогда
				Рисунок.РазмерКартинки = РазмерКартинки.Растянуть;
				Прервать;
			КонецЕсли;
		КонецЦикла;
		
		Структура.Вставить("ПечатнаяФормаДокумента", Новый ХранилищеЗначения(ТабличныйДокумент, Новый СжатиеДанных(9))); //@NON-NLS-1
		
		Структура.Вставить("СуммаДокументаУП", ЗаказКлиентаИБ.СуммаДокумента); //@NON-NLS-1
		Структура.Вставить("СуммаНДСДокументаУП", ЗаказКлиентаИБ.СуммаНДС); //@NON-NLS-1
		
		Если ЗаказКлиентаИБ.ПорядокРасчетовДоговор Тогда
			СуммаДолгаПоДокументуУП = Мин(ЗаказКлиентаИБ.СуммаДокумента, СостояниеЗаказа.СуммаКОплате);
			Если ЗаказКлиентаИБ.УстановленСрокОплаты Тогда
				Структура.Вставить("ДатаСледующегоПлатежа", ЗаказКлиентаИБ.СрокОплаты); //@NON-NLS-1
			КонецЕсли;
		Иначе
			СуммаДолгаПоДокументуУП = СостояниеЗаказа.СуммаДолга;
			Структура.Вставить("ДатаСледующегоПлатежа", СледующаяДатаПлатежаПоЗаказу(ЗаказКлиентаИБ.Ссылка)); //@NON-NLS-1
		КонецЕсли;
		
		Структура.Вставить("СуммаДолгаПоДокументуУП", СуммаДолгаПоДокументуУП); //@NON-NLS-1
		
		Если ЗаказКлиентаИБ.СуммаПредоплаты > 0 Тогда
			Структура.Вставить("ДатаПредоплатыПоДокументу", ДатаПредоплатыПоЗаказу(ЗаказКлиентаИБ.Ссылка)); //@NON-NLS-1
			Структура.Вставить("СуммаПредоплатыПоДокументу", ЗаказКлиентаИБ.СуммаПредоплаты); //@NON-NLS-1
		КонецЕсли;
		
		//+ УП 2.2.
		Структура.Вставить("ДополнительныеРеквизиты"); //@NON-NLS-1
		ЛокальноеИмяОбъекта = "DocumentTabularSectionRow.ЗаказКлиента.ДополнительныеРеквизиты";
		ЗаписатьДополнительныеРеквизиты(Структура, ЗаказКлиентаИБ.Ссылка,
			"Документ.ЗаказКлиента.ДополнительныеРеквизиты",
			ЛокальноеИмяОбъекта);
		//- УП 2.2.
		
		ОтветныеДанные.Добавить(Структура);
	КонецЦикла;
	
	Возврат ОтветныеДанные;
КонецФункции

