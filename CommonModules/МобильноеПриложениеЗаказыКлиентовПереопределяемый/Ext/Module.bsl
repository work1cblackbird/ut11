					СтруктураЕдиницыИзмерения.PredefinedDataName = УпаковкиНоменклатуры.ВесЕдиницаИзмеренияИмяПредопределенныхДанных;
					СтруктураЕдиницыИзмерения["МеждународноеСокращение"] = //@NON-NLS-1
						УпаковкиНоменклатуры.ВесЕдиницаИзмеренияМеждународноеСокращение;
					СтруктураЕдиницыИзмерения["НаименованиеПолное"] = УпаковкиНоменклатуры.ВесЕдиницаИзмеренияНаименованиеПолное; //@NON-NLS-1
					
					ЛокальноеИмяОбъекта = "CatalogObject.ЕдиницыИзмерения"; //@NON-NLS-1
					ЗаписатьСправочник(ЗаписьXML, СтруктураЕдиницыИзмерения, ЛокальноеИмяОбъекта);
					
					ВыгруженныеОбъекты.Вставить(УпаковкиНоменклатуры.ВесЕдиницаИзмерения, УпаковкиНоменклатуры.ВесЕдиницаИзмерения);
				КонецЕсли;
			Иначе
				СтруктураУпаковки["ВесЕдиницаИзмерения"] = ПустойИдентификатор; //@NON-NLS-1
			КонецЕсли;
			
			СтруктураУпаковки["Штрихкод"] = ШтрихкодНоменклатуры(СтруктураЗаписиУпаковки.Номенклатура, //@NON-NLS-1
				СтруктураЗаписиУпаковки.ХарактеристикаСсылка, СтруктураЗаписиУпаковки.УпаковкаСсылка);
			
			ЛокальноеИмяОбъекта = "CatalogObject.УпаковкиНоменклатуры"; //@NON-NLS-1
			ЗаписатьСправочник(ЗаписьXML, СтруктураУпаковки, ЛокальноеИмяОбъекта);
			
		КонецЕсли;
