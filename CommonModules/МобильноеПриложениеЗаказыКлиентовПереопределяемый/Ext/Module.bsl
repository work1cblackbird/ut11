Процедура ЗаписатьКонтактнуюИнформациюСправочника(ИнформацияПоОбъекту, Знач ТаблицаКИ, Знач ИмяСправочникаЛокальное)
	
	ИмяСправочникаЛокальное = ЗаменитьПартнераНаКлиента(ИмяСправочникаЛокальное);
	
	ТипОбъекта = ФабрикаXDTO.Тип(МобильноеПриложениеЗаказыКлиентов.URIПространстваИмен(), ИмяСправочникаЛокальное);
	МассивСтрокКонтактнойИнформации = Новый Массив;
	ПустойИдентификатор = ПустойИдентификатор();
	
	Для Каждого СтрокаКИ Из ТаблицаКИ Цикл
		ОбъектОбмена = ФабрикаXDTO.Создать(ТипОбъекта);
		ОбъектОбмена.АдресЭП = СтрокаКИ.АдресЭП;
		ОбъектОбмена.Город = СтрокаКИ.Город;
		ОбъектОбмена.ДоменноеИмяСервера = СтрокаКИ.ДоменноеИмяСервера;
		ОбъектОбмена.НомерТелефона = СтрокаКИ.НомерТелефона;
		ОбъектОбмена.НомерТелефонаБезКодов = СтрокаКИ.НомерТелефонаБезКодов;
		ОбъектОбмена.Представление = СтрокаКИ.Представление;
		ОбъектОбмена.Регион = СтрокаКИ.Регион;
		ОбъектОбмена.Страна = СтрокаКИ.Страна;
		ТипКИСтрокой = "";
		Если ЗначениеЗаполнено(СтрокаКИ.Тип) Тогда
			ТипКИСтрокой = МобильноеПриложениеЗаказыКлиентовПовтИсп.СоответствиеТиповКонтактнойИнформации().Получить(СтрокаКИ.Тип);
		КонецЕсли;
		ОбъектОбмена.Тип = ТипКИСтрокой;
		Если ЗначениеЗаполнено(СтрокаКИ.Вид) Тогда
			ИдентификаторВидаКИ = СокрЛП(СтрокаКИ.Вид.УникальныйИдентификатор());
		Иначе
			ИдентификаторВидаКИ = ПустойИдентификатор;
		КонецЕсли;
		ОбъектОбмена.Вид = ИдентификаторВидаКИ;
		Если ЗначениеЗаполнено(СтрокаКИ.Представление) Тогда
			ОбъектОбмена.Представление = СтрокаКИ.Представление;
		Иначе
			ОбъектОбмена.Представление = Символы.НПП;
		КонецЕсли;
		Если ЗначениеЗаполнено(СтрокаКИ.ЗначенияПолей) Тогда
			ОбъектОбмена.ЗначенияПолей = СтрокаКИ.ЗначенияПолей;
		Иначе
			ОбъектОбмена.ЗначенияПолей = Символы.НПП;
		КонецЕсли;
		МассивСтрокКонтактнойИнформации.Добавить(ОбъектОбмена);
	КонецЦикла;
	
	ИнформацияПоОбъекту["КонтактнаяИнформация"] = МассивСтрокКонтактнойИнформации; //@NON-NLS-1
КонецПроцедуры

Процедура ЗаписатьСправочник(ЗаписьXML, Знач СтруктураСправочника, Знач ИмяСправочника)
	
	ТипОбъекта = ФабрикаXDTO.Тип(МобильноеПриложениеЗаказыКлиентов.URIПространстваИмен(), ИмяСправочника);
	ОбъектОбмена = ФабрикаXDTO.Создать(ТипОбъекта);
	
	ЗагрузитьКИ = Ложь;
	ИсключаемоеСвойство = "";
	Если СтруктураСправочника.Свойство("КонтактнаяИнформация") Тогда //@NON-NLS-1
		ЗагрузитьКИ = Истина;
		ИсключаемоеСвойство = ИсключаемоеСвойство + ",КонтактнаяИнформация"; //@NON-NLS-1
	КонецЕсли;
	
	ЗагрузитьДопРеквизиты = Ложь;
	Если СтруктураСправочника.Свойство("ДополнительныеРеквизиты") Тогда //@NON-NLS-1
		ЗагрузитьДопРеквизиты = Истина;
		ИсключаемоеСвойство = ИсключаемоеСвойство + ",ДополнительныеРеквизиты"; //@NON-NLS-1
	КонецЕсли;
	
	ИсключаемоеСвойство = СокрЛП(Сред(ИсключаемоеСвойство, 2));
	Попытка
		ЗаполнитьЗначенияСвойств(ОбъектОбмена, СтруктураСправочника,, ИсключаемоеСвойство);
	Исключение
		Описание = ИнформацияОбОшибке();
		ЗаписьЖурналаРегистрации(
			НСтр("ru = 'Обмен мобильное приложение 1С:Заказы'") + "." + НСтр("ru = 'Запись справочника'",
				ОбщегоНазначения.КодОсновногоЯзыка()),
			УровеньЖурналаРегистрации.Ошибка,,
			СтруктураСправочника.Description,
			ИмяСправочника + ": " + ПодробноеПредставлениеОшибки(Описание));
		ВызватьИсключение(Описание.Описание);
	КонецПопытки;
	
	Если ЗагрузитьКИ Тогда
		Для Каждого СтрокаКИ Из СтруктураСправочника["КонтактнаяИнформация"] Цикл //@NON-NLS-1
			ТабличнаяЧастьОбъекта = ОбъектОбмена.КонтактнаяИнформация;//СписокXDTO - 
			ТабличнаяЧастьОбъекта.Добавить(СтрокаКИ);
		КонецЦикла;
	КонецЕсли;
	
	Если ЗагрузитьДопРеквизиты Тогда
		Для Каждого СтрокаДопРеквизиты Из СтруктураСправочника["ДополнительныеРеквизиты"] Цикл //@NON-NLS-1
			ТабличнаяЧастьОбъекта = ОбъектОбмена.ДополнительныеРеквизиты;//СписокXDTO - 
			ТабличнаяЧастьОбъекта.Добавить(СтрокаДопРеквизиты);
		КонецЦикла;
	КонецЕсли;
	
	ФабрикаXDTO.ЗаписатьXML(ЗаписьXML, ОбъектОбмена);
КонецПроцедуры

