	Иначе
		СтруктураВидаКИ.Parent = ПустойИдентификатор();
	КонецЕсли;
	
	ЛокальноеИмяОбъекта = "CatalogObject.ВидыКонтактнойИнформации"; //@NON-NLS-1
	ЗаписатьСправочник(ЗаписьXML, СтруктураВидаКИ, ЛокальноеИмяОбъекта);
	
