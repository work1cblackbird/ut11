	СтруктураПартнера["ВидЦены"]						= ПустойИдентификатор;//@NON-NLS-1
	СтруктураПартнера["ВремяДоставкиПо"]				= СтрокаТаблицы.ПартнерВремяДоставкиПо;//@NON-NLS-1
	СтруктураПартнера["ВремяДоставкиС"]				= СтрокаТаблицы.ПартнерВремяДоставкиС;//@NON-NLS-1
