	СтруктураПартнера["Склад"]							= ?(ЗначениеЗаполнено(СтрокаТаблицы.ПартнерСкладСсылка),//@NON-NLS-1
															СокрЛП(СтрокаТаблицы.ПартнерСкладСсылка.УникальныйИдентификатор()),
