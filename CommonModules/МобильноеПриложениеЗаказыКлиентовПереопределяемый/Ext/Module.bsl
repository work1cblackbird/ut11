		+ " (" +СтруктураКонтрагента["ИННКПП"] + ")";//@NON-NLS-2
	СтруктураКонтрагента["Клиент"] = СокрЛП(СтрокаТаблицы.КонтрагентПартнер.УникальныйИдентификатор());//@NON-NLS-1
