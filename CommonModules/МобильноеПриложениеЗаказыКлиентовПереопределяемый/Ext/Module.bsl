		СтруктураСклада["ГруппаСкладов"]	= СтруктураСклада.ref; //@NON-NLS-1
	КонецЕсли;
	
	ЛокальноеИмяОбъекта = "CatalogTabularSectionRow.Склады.КонтактнаяИнформация"; //@NON-NLS-1
	ЗаписатьКонтактнуюИнформацию(СтруктураСклада, СтрокаДанных.СкладСсылка, 
		"Справочник.Склады.КонтактнаяИнформация", 
		ЛокальноеИмяОбъекта);
	
	ЛокальноеИмяОбъекта = "CatalogObject.Склады"; //@NON-NLS-1
	ЗаписатьСправочник(ЗаписьXML, СтруктураСклада, ЛокальноеИмяОбъекта);
	
