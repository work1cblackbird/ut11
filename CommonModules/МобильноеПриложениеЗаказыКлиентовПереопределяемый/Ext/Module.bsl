	ИнформацияНДС = СтрНайти(СтрокаДанных.ВидЦеныНаименование, НСтр("ru = 'НДС'", КодОсновногоЯзыка));
	Наименование = СтрокаДанных.ВидЦеныНаименование;
	
	Если ИнформацияНДС = 0 Тогда
		Если СтруктураВидаЦены["ЦенаВключаетНДС"] Тогда //@NON-NLS-1
			ТекстПроНДС = НСтр("ru = '(с НДС)'", КодОсновногоЯзыка);
