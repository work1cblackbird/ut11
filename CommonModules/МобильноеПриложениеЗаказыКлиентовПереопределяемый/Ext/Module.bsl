		ТекстКомментария = СтрШаблон(НСтр("ru = '<Создан по документу: %1/>'",
			ОбщегоНазначения.КодОсновногоЯзыка()), СокрЛП(ДокументОснование));
		ДокументОбъект.Комментарий = ТекстКомментария;
	КонецЕсли;
	
	ЗаполнитьТоварнуюЧасть(ДокументОбъект, МобильныеДанные.Товары, 1);
	
