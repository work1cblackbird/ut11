// Записывает элемент справочника "Партнеры".
//
// Параметры:
//  МобильныйПартнер - ОбъектXDTO - полученные данные обмена;
//  УзелОбмена - ПланОбменаСсылка - узел плана обмена с мобильным приложением;
//  Сообщение - Массив - массив содержащий данные для ответного сообщения.
//
Процедура СоздатьОбновитьКлиента(МобильныйПартнер, УзелОбмена, Сообщение) Экспорт
	
	СтруктураОтвета = Новый Структура;
	СтруктураОтвета.Вставить("ref", МобильныйПартнер.ref);
	СтруктураОтвета.Вставить("ERPКодДоговора", Символы.НПП); //@NON-NLS-1
	СтруктураОтвета.Вставить("ERPКодСоглашения", Символы.НПП); //@NON-NLS-1
	СтруктураОтвета.Вставить("ТипОбъекта", "Клиенты"); //@NON-NLS-1 @NON-NLS-2
	СтруктураОтвета.Вставить("Успешно", Истина); //@NON-NLS-1
	
	ПравоСоздания = ПравоДоступа("Добавление", Метаданные.Справочники.Партнеры);
	
	ЭтоНовыйПартнер = Ложь;
	ПартнерСсылка = Справочники.Партнеры.ПолучитьСсылку(Новый УникальныйИдентификатор(МобильныйПартнер.ref));
	Партнер = ПартнерСсылка.ПолучитьОбъект();
	
	Если Партнер = Неопределено Тогда
		Если ПравоСоздания Тогда
			ЭтоНовыйПартнер = Истина;
			Партнер = Справочники.Партнеры.СоздатьЭлемент();
			Партнер.УстановитьСсылкуНового(ПартнерСсылка);
			Партнер.Код = МобильныйПартнер.Code;
			Партнер.Клиент = Истина;
			Партнер.ОсновнойМенеджер = Пользователи.ТекущийПользователь();
			Партнер.ДатаРегистрации = ТекущаяДатаСеанса();
			Партнер.ЮрФизЛицо = Перечисления.КомпанияЧастноеЛицо.Компания;
			Если ПолучитьФункциональнуюОпцию("ИспользоватьЗаданияДляУправленияТорговымиПредставителями")
				ИЛИ ПолучитьФункциональнуюОпцию("ИспользоватьЗаданияТорговымПредставителямДляПланирования") Тогда
				Партнер.ОбслуживаетсяТорговымиПредставителями = Истина;
			КонецЕсли;
		Иначе
			СтруктураОтвета.Вставить("Успешно", Ложь); //@NON-NLS-1
			Сообщение.Добавить(СтруктураОтвета);
			Возврат;
		КонецЕсли;
	КонецЕсли;
	
	ИспользуютсяГруппыДоступаПартнеров = Справочники.ГруппыДоступаПартнеров.ИспользуютсяГруппыДоступа();
	Если ИспользуютсяГруппыДоступаПартнеров
		И НЕ ЗначениеЗаполнено(Партнер.ГруппаДоступа) Тогда
		Партнер.ГруппаДоступа = ГруппаДоступаПартнера();
	КонецЕсли;
	
	Если НЕ Партнер.ПометкаУдаления = МобильныйПартнер.DeletionMark Тогда
		Партнер.ПометкаУдаления = МобильныйПартнер.DeletionMark;
	КонецЕсли;
	Если НЕ Партнер.Наименование = МобильныйПартнер.Description Тогда
		Партнер.Наименование = МобильныйПартнер.Description;
	КонецЕсли;
	Если НЕ Партнер.НаименованиеПолное = МобильныйПартнер.Description Тогда
		Партнер.НаименованиеПолное = МобильныйПартнер.Description;
	КонецЕсли;
	
	ПартнерРодитель = Справочники.Партнеры.ПолучитьСсылку(Новый УникальныйИдентификатор(МобильныйПартнер.Parent));
	Если НЕ Партнер.Родитель = ПартнерРодитель Тогда
		Партнер.Родитель = ПартнерРодитель;
	КонецЕсли;
	
	КонтактнаяИнформацияПартнера = Партнер.КонтактнаяИнформация;
	КонтактнаяИнформацияПартнера.Очистить();
	
	Если НЕ МобильныйПартнер.Свойства().Получить("КонтактнаяИнформация") = Неопределено Тогда
		Для Каждого СтрокаКИ Из МобильныйПартнер.КонтактнаяИнформация Цикл
			НоваяСтрока = КонтактнаяИнформацияПартнера.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаКИ, , "Тип, Вид");
			НоваяСтрока.Вид = Справочники.ВидыКонтактнойИнформации.ПолучитьСсылку(Новый УникальныйИдентификатор(СтрокаКИ["Вид"]));
			НоваяСтрока.Тип = Перечисления.ТипыКонтактнойИнформации[СтрокаКИ["Тип"]];
		КонецЦикла;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(МобильныйПартнер.ДополнительнаяИнформацияПоДоставке) 
		И НЕ Партнер.Комментарий = МобильныйПартнер.ДополнительнаяИнформацияПоДоставке Тогда
		Партнер.Комментарий = МобильныйПартнер.ДополнительнаяИнформацияПоДоставке;
	КонецЕсли;
	
	ЗаполнитьДополнительныеРеквизитыОбъекта(МобильныйПартнер, Партнер);
	
	Попытка
		Партнер.Записать();
	Исключение
		СтруктураОтвета.Вставить("Успешно", Ложь); //@NON-NLS-1
	КонецПопытки;
	
	Если ЭтоНовыйПартнер Тогда
		Если НЕ СтруктураОтвета["Успешно"] Тогда //@NON-NLS-1
			Партнер.ОбменДанными.Загрузка = Истина;
			Попытка
				Партнер.Записать();
				СтруктураОтвета.Вставить("Успешно", Истина); //@NON-NLS-1
			Исключение
				СтруктураОтвета.Вставить("Успешно", Ложь); //@NON-NLS-1
			КонецПопытки;
		КонецЕсли;
		
		Если СтруктураОтвета["Успешно"] Тогда //@NON-NLS-1
			ЗаписатьСегментыПартнера(ПартнерСсылка, УзелОбмена);
		КонецЕсли;
	КонецЕсли;
	
	Сообщение.Добавить(СтруктураОтвета);
КонецПроцедуры

