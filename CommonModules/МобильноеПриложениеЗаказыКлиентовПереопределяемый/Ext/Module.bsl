Процедура ЗаписатьДополнительныеРеквизиты(ИнформацияПоОбъекту, Знач СсылкаНаОбъект, Знач ИмяОбъекта, Знач ИмяОбъектаЛокальное)
	
	МассивИмен = СтрРазделить(ИмяОбъекта, ".");
	ЛокальноеИмя = Лев(ИмяОбъекта, СтрДлина((МассивИмен[МассивИмен.ВГраница()]))-2);
	
	Запрос = Новый Запрос(
	"ВЫБРАТЬ
	|	ОбъектДополнительныеРеквизиты.Свойство КАК Свойство,
	|	ОбъектДополнительныеРеквизиты.Значение КАК Значение,
	|	ОбъектДополнительныеРеквизиты.ТекстоваяСтрока КАК ТекстоваяСтрока
	|ИЗ
	|	&ТаблицаОбъекта КАК ОбъектДополнительныеРеквизиты
	|ГДЕ
	|	ОбъектДополнительныеРеквизиты.Ссылка = &Ссылка");
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&ТаблицаОбъекта", ИмяОбъекта);
	Запрос.УстановитьПараметр("Ссылка", СсылкаНаОбъект);
	Результат = Запрос.Выполнить().Выгрузить();
	
	РеквизитыОбмена = Новый ТаблицаЗначений;
	ЗаполнитьТаблицуСохраненныхРеквизитов(РеквизитыОбмена);
	РеквизитыОбмена.Колонки.Добавить("ТекстоваяСтрока", Новый ОписаниеТипов("Строка"));
	ОписаниеТиповЗначенияДопРеквизита = МобильноеПриложениеЗаказыКлиентов.ОписаниеТиповЗначенияДопРеквизита();
	РеквизитыОбмена.Колонки.Добавить("Значение", ОписаниеТиповЗначенияДопРеквизита);
	РеквизитыОбмена.Колонки.Добавить("КУдалению", Новый ОписаниеТипов("Булево"));
	
	Для Каждого СтрокаРеквизит Из РеквизитыОбмена Цикл
		Если СтрокаРеквизит.ИмяОбъекта = ЛокальноеИмя Тогда
			Если СтрокаРеквизит.Участвует Тогда
				Если ТипЗнч(СтрокаРеквизит.Реквизит) = Тип("Строка") Тогда
					СтрокаРеквизит.Значение = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(СсылкаНаОбъект, СтрокаРеквизит.Реквизит);
				Иначе
					СтрокаДопРеквизита = Результат.Найти(СтрокаРеквизит.Реквизит);
					Если СтрокаДопРеквизита = Неопределено Тогда
						СтрокаРеквизит.КУдалению = Истина;
					Иначе
						СтрокаРеквизит.Значение = СтрокаДопРеквизита.Значение;
						СтрокаРеквизит.ТекстоваяСтрока = СтрокаДопРеквизита.ТекстоваяСтрока;
					КонецЕсли;
				КонецЕсли;
			Иначе
				СтрокаРеквизит.КУдалению = Истина;
			КонецЕсли;
		Иначе
			СтрокаРеквизит.КУдалению = Истина;
		КонецЕсли;
	КонецЦикла;
	СтрокиКУдалению = РеквизитыОбмена.НайтиСтроки(Новый Структура("КУдалению", Истина));
	
	Для каждого СтрокаКУдалению Из СтрокиКУдалению Цикл
		РеквизитыОбмена.Удалить(СтрокаКУдалению);
	КонецЦикла;
	
	ЗаписатьДополнительныеРеквизитыОбъекта(ИнформацияПоОбъекту, РеквизитыОбмена, ИмяОбъектаЛокальное);
КонецПроцедуры

Процедура ЗаписатьДополнительныеРеквизитыОбъекта(ИнформацияПоОбъекту, Знач ДопРеквизиты, Знач ЛокальноеИмяОбъекта)
	
	ЛокальноеИмяОбъекта = СтрЗаменить(ЛокальноеИмяОбъекта, НСтр("ru = 'Партнер'"), НСтр("ru = 'Клиент'"));
	
	ТипОбъекта = ФабрикаXDTO.Тип(МобильноеПриложениеЗаказыКлиентов.URIПространстваИмен(), ЛокальноеИмяОбъекта);
	
	МассивСтрокДопРеквизитов = Новый Массив;
	Для Каждого СтрокаРеквизит Из ДопРеквизиты Цикл
		
		ОбъектОбмена = ФабрикаXDTO.Создать(ТипОбъекта);
		ОбъектОбмена.Свойство = СтрокаРеквизит.УникальныйИдентификаторСвойства;
		Если ТипЗнч(СтрокаРеквизит.Значение) = Тип("СправочникСсылка.ЗначенияСвойствОбъектов")
			ИЛИ ТипЗнч(СтрокаРеквизит.Значение) = Тип("СправочникСсылка.ЗначенияСвойствОбъектовИерархия") Тогда
			Значение = СокрЛП(СтрокаРеквизит.Значение.УникальныйИдентификатор());
		Иначе
			Значение = СтрокаРеквизит.Значение;
		КонецЕсли;
		ОбъектОбмена.Значение = Значение;
		Если ЗначениеЗаполнено(СтрокаРеквизит.ТекстоваяСтрока) Тогда
			ОбъектОбмена.ТекстоваяСтрока = СтрокаРеквизит.ТекстоваяСтрока;
		Иначе
			ОбъектОбмена.ТекстоваяСтрока = "";
		КонецЕсли;
		
		МассивСтрокДопРеквизитов.Добавить(ОбъектОбмена);
	КонецЦикла;
	
	ИнформацияПоОбъекту["ДополнительныеРеквизиты"] = МассивСтрокДопРеквизитов; //@NON-NLS-1
КонецПроцедуры

Процедура ЗаписатьДополнительныеРеквизитыОбъектов(ЗаписьXML)
	
	РеквизитыОбмена = Новый ТаблицаЗначений;
	ЗаполнитьТаблицуСохраненныхРеквизитов(РеквизитыОбмена);
	
	Для Каждого СтрокаРеквизит Из РеквизитыОбмена Цикл
		ЗаписатьДополнительныйРеквизит(ЗаписьXML, СтрокаРеквизит);
	КонецЦикла;
КонецПроцедуры

Процедура ЗаписатьДополнительныйРеквизит(ЗаписьXML, Знач СтрокаДанных)
	
	ВключитьВОбменЗначенияСвойствОбъектов = Ложь;
	Если СтрокаДанных.ТипЗначения.СодержитТип(Тип("Булево")) Тогда
		ТипЗначенияМП = "Булево";
	ИначеЕсли СтрокаДанных.ТипЗначения.СодержитТип(Тип("Дата")) Тогда
		ТипЗначенияМП = "Дата";
	ИначеЕсли СтрокаДанных.ТипЗначения.СодержитТип(Тип("Строка")) Тогда
		ТипЗначенияМП = "Строка";
	ИначеЕсли СтрокаДанных.ТипЗначения.СодержитТип(Тип("Число")) Тогда
		ТипЗначенияМП = "Число";
	ИначеЕсли СтрокаДанных.ТипЗначения.СодержитТип(Тип("СправочникСсылка.ЗначенияСвойствОбъектов")) Тогда
		ТипЗначенияМП = "СправочникСсылкаЗначенияСвойствОбъектов";
		ВключитьВОбменЗначенияСвойствОбъектов = Истина;
	ИначеЕсли СтрокаДанных.ТипЗначения.СодержитТип(Тип("СправочникСсылка.ЗначенияСвойствОбъектовИерархия")) Тогда
		ТипЗначенияМП = "СправочникСсылкаЗначенияСвойствОбъектовИерархия";
		ВключитьВОбменЗначенияСвойствОбъектов = Истина;
	Иначе
		ТипЗначенияМП = "";
	КонецЕсли;
	
	// Если реквизит объекта или дополнительный реквизит объекта больше не участвует в обмене,
	// передаем признак удаления объекта.
	// Также, если тип значения реквизита справочники "Значение свойств объекта" или "Значение свойств объекта (Иерархия)",
	// передаем признак удаления для подчиненных объектов.
	Если НЕ СтрокаДанных.Участвует Тогда
		Если НЕ ТипЗнч(СтрокаДанных.Реквизит) = Тип("Строка") Тогда
			Данные = СтрокаДанных.Реквизит.ПолучитьОбъект();
			Если ЗначениеЗаполнено(СтрокаДанных.Реквизит) И Данные = Неопределено Тогда
				Данные = Новый УдалениеОбъекта(СтрокаДанных.Реквизит);
			КонецЕсли;
		Иначе
			Данные = ПланыВидовХарактеристик.ДополнительныеРеквизитыИСведения.ПолучитьСсылку(
			Новый УникальныйИдентификатор(СтрокаДанных.УникальныйИдентификаторСвойства));
		КонецЕсли;
		МобильноеПриложениеЗаказыКлиентов.УдалениеДанных(Данные);
		Если ТипЗнч(Данные) = Тип("УдалениеОбъекта") Тогда
			СериализаторXDTO.ЗаписатьXML(ЗаписьXML, Данные);
		КонецЕсли;
		Если ВключитьВОбменЗначенияСвойствОбъектов Тогда
			ЗаписатьЗначенияСвойствОбъектов(ЗаписьXML, СтрокаДанных.Реквизит, Истина);
		КонецЕсли;
		Возврат;
	КонецЕсли;
	
	СтруктураДопРеквизита = МобильноеПриложениеЗаказыКлиентов.СтруктураДопРеквизита();
	
	Если ТипЗнч(СтрокаДанных.Реквизит) = Тип("Строка") Тогда
		СтруктураДопРеквизита.DeletionMark = Ложь;
		СтруктураДопРеквизита.Description = СтрокаДанных.Реквизит;
		СтруктураДопРеквизита.PredefinedDataName = "";
		
		СтруктураДопРеквизита.Виден = Истина;
		СтруктураДопРеквизита.ВладелецДополнительныхЗначений = ПустойИдентификатор();
		СтруктураДопРеквизита.ДополнительныеЗначенияИспользуются = Ложь;
		СтруктураДопРеквизита.ДополнительныеЗначенияСВесом = Ложь;
		СтруктураДопРеквизита.Доступен = Истина;
		СтруктураДопРеквизита.Заголовок = СтрокаДанных.Представление;
		СтруктураДопРеквизита.ЗаголовокФормыВыбораЗначения = СтрокаДанных.Представление;
		СтруктураДопРеквизита.ЗаголовокФормыЗначения = СтрокаДанных.Представление;
		СтруктураДопРеквизита.ЗаполнятьОбязательно = Ложь;
		СтруктураДопРеквизита.МногострочноеПолеВвода = 0;
		СтруктураДопРеквизита.НаборСвойств = СтрокаДанных.ИмяОбъекта;
		СтруктураДопРеквизита.ФорматСвойства = "";
		
	Иначе
		ЗначенияРеквизитовДопРеквизита = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(СтрокаДанных.Реквизит,
		"ПометкаУдаления, Наименование, ИмяПредопределенныхДанных, Виден, ВладелецДополнительныхЗначений, НаборСвойств,"
		"ДополнительныеЗначенияИспользуются, ДополнительныеЗначенияСВесом, Доступен, Заголовок, ФорматСвойства,"
		"ЗаголовокФормыВыбораЗначения, ЗаголовокФормыЗначения, ЗаполнятьОбязательно, МногострочноеПолеВвода");
		СтруктураДопРеквизита.DeletionMark = ЗначенияРеквизитовДопРеквизита.ПометкаУдаления;
		СтруктураДопРеквизита.Description = ЗначенияРеквизитовДопРеквизита.Наименование;
		СтруктураДопРеквизита.PredefinedDataName = ЗначенияРеквизитовДопРеквизита.ИмяПредопределенныхДанных;
		СтруктураДопРеквизита.ПометкаУдаления = ЗначенияРеквизитовДопРеквизита.ПометкаУдаления;
		СтруктураДопРеквизита.Виден = ЗначенияРеквизитовДопРеквизита.Виден;
		СтруктураДопРеквизита.ДополнительныеЗначенияИспользуются = ЗначенияРеквизитовДопРеквизита.ДополнительныеЗначенияИспользуются;
		СтруктураДопРеквизита.ДополнительныеЗначенияСВесом = ЗначенияРеквизитовДопРеквизита.ДополнительныеЗначенияСВесом;
		СтруктураДопРеквизита.Доступен = ЗначенияРеквизитовДопРеквизита.Доступен;
		СтруктураДопРеквизита.Заголовок = ЗначенияРеквизитовДопРеквизита.Заголовок;
		СтруктураДопРеквизита.ФорматСвойства = ЗначенияРеквизитовДопРеквизита.ФорматСвойства;
		СтруктураДопРеквизита.ЗаголовокФормыВыбораЗначения = ЗначенияРеквизитовДопРеквизита.ЗаголовокФормыВыбораЗначения;
		СтруктураДопРеквизита.ЗаполнятьОбязательно = ЗначенияРеквизитовДопРеквизита.ЗаполнятьОбязательно;
		СтруктураДопРеквизита.МногострочноеПолеВвода = ЗначенияРеквизитовДопРеквизита.МногострочноеПолеВвода;
		
		Если НЕ ЗначениеЗаполнено(ЗначенияРеквизитовДопРеквизита.ВладелецДополнительныхЗначений) Тогда
			СтруктураДопРеквизита.ВладелецДополнительныхЗначений = ПустойИдентификатор();
		Иначе
			СтруктураДопРеквизита.ВладелецДополнительныхЗначений =
				СокрЛП(ЗначенияРеквизитовДопРеквизита.ВладелецДополнительныхЗначений.УникальныйИдентификатор());
		КонецЕсли;
		Если НЕ ЗначениеЗаполнено(ЗначенияРеквизитовДопРеквизита.НаборСвойств) Тогда
			СтруктураДопРеквизита.НаборСвойств = Символы.НПП;
		Иначе
			СтруктураДопРеквизита.НаборСвойств = СтрокаДанных.ИмяОбъекта;
		КонецЕсли;
	КонецЕсли;
	
	СтруктураДопРеквизита.ref = СтрокаДанных.УникальныйИдентификаторСвойства;
	СтруктураДопРеквизита.ЭтоДополнительноеСведение = Ложь;
	СтруктураДопРеквизита.НаборСвойств = СтрокаДанных.ИмяОбъекта;
	СтруктураДопРеквизита.ТипЗначения = ТипЗначенияМП;
	
	ЗаполнитьЗависимостиСвойствДопРеквизита(СтрокаДанных.Реквизит, СтруктураДопРеквизита);
	
	ЛокальноеИмяОбъекта = "CatalogObject.ДополнительныеРеквизитыИСведения"; //@NON-NLS-1
	ЗаписатьСправочник(ЗаписьXML, СтруктураДопРеквизита, ЛокальноеИмяОбъекта);
	
	Если ВключитьВОбменЗначенияСвойствОбъектов Тогда
		ЗаписатьЗначенияСвойствОбъектов(ЗаписьXML, СтрокаДанных.Реквизит);
	КонецЕсли;
КонецПроцедуры

Процедура ЗаписатьЗначенияСвойствОбъектов(ЗаписьXML, Владелец, Удаление = Ложь)
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	ЗначенияСвойствОбъектов.Ссылка,
	|	ЗначенияСвойствОбъектов.ПометкаУдаления КАК DeletionMark,
	|	ЗначенияСвойствОбъектов.Владелец,
	|	ЗначенияСвойствОбъектов.Родитель,
	|	ЗначенияСвойствОбъектов.ЭтоГруппа КАК IsFolder,
	|	ЗначенияСвойствОбъектов.Наименование КАК Description,
	|	ЗначенияСвойствОбъектов.Вес КАК Вес,
	|	ЗначенияСвойствОбъектов.ИмяПредопределенныхДанных КАК PredefinedDataName
	|ИЗ
	|	Справочник.ЗначенияСвойствОбъектов КАК ЗначенияСвойствОбъектов
	|ГДЕ
	|	ЗначенияСвойствОбъектов.Владелец = &Владелец
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	ЗначенияСвойствОбъектов.Ссылка,
	|	ЗначенияСвойствОбъектов.ПометкаУдаления,
	|	ЗначенияСвойствОбъектов.Владелец,
	|	ЗначенияСвойствОбъектов.Родитель,
	|	ЛОЖЬ,
	|	ЗначенияСвойствОбъектов.Наименование,
	|	ЗначенияСвойствОбъектов.Вес,
	|	ЗначенияСвойствОбъектов.ИмяПредопределенныхДанных
	|ИЗ
	|	Справочник.ЗначенияСвойствОбъектовИерархия КАК ЗначенияСвойствОбъектов
	|ГДЕ
	|	ЗначенияСвойствОбъектов.Владелец = &Владелец";
	
	Запрос.УстановитьПараметр("Владелец", Владелец);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		Если Удаление Тогда
			Данные = Выборка.Ссылка.ПолучитьОбъект();
			Если ЗначениеЗаполнено(Выборка.Ссылка) И Данные = Неопределено Тогда
				Данные = Новый УдалениеОбъекта(Выборка.Ссылка);
			КонецЕсли;
			МобильноеПриложениеЗаказыКлиентов.УдалениеДанных(Данные);
			Если ТипЗнч(Данные) = Тип("УдалениеОбъекта") Тогда
				СериализаторXDTO.ЗаписатьXML(ЗаписьXML, Данные);
			КонецЕсли;
		Иначе
			Иерархия = ТипЗнч(Выборка.Ссылка) = Тип("СправочникСсылка.ЗначенияСвойствОбъектовИерархия");
			СтруктураЗначенияСвойствОбъекта =
			МобильноеПриложениеЗаказыКлиентов.СтруктураЗначенияСвойствОбъекта(Иерархия, Выборка.IsFolder);
			ЗаполнитьЗначенияСвойств(СтруктураЗначенияСвойствОбъекта, Выборка);
			
			СтруктураЗначенияСвойствОбъекта.ref = СокрЛП(Выборка.Ссылка.УникальныйИдентификатор());
			СтруктураЗначенияСвойствОбъекта.Owner = СокрЛП(Выборка.Владелец.УникальныйИдентификатор());
			СтруктураЗначенияСвойствОбъекта.Parent = СокрЛП(Выборка.Родитель.УникальныйИдентификатор());
			
			ЛокальноеИмяОбъекта = "CatalogObject.ЗначенияСвойствОбъектов"; //@NON-NLS-1
			ЛокальноеИмяОбъектаИерархия = "CatalogObject.ЗначенияСвойствОбъектовИерархия"; //@NON-NLS-1
			ЗаписатьСправочник(ЗаписьXML, СтруктураЗначенияСвойствОбъекта,
			?(Иерархия, ЛокальноеИмяОбъектаИерархия, ЛокальноеИмяОбъекта));
		КонецЕсли;
	КонецЦикла;
КонецПроцедуры

Процедура ЗаполнитьДополнительныеРеквизитыОбъекта(МобильныеДанные, Объект)
	
	Если НЕ МобильныеДанные.Свойства().Получить("ДополнительныеРеквизиты") = Неопределено Тогда //@NON-NLS-1
		ДополнительныеРеквизитыОбъекта = Объект.ДополнительныеРеквизиты;
		
		СохраненныеРеквизитыОбмена = Новый ТаблицаЗначений;
		ЗаполнитьТаблицуСохраненныхРеквизитов(СохраненныеРеквизитыОбмена);
		
		Для Каждого СтрокаДоп Из МобильныеДанные.ДополнительныеРеквизиты Цикл
			
			СоответствиеРеквизита = СохраненныеРеквизитыОбмена.Найти(СокрЛП(СтрокаДоп.Свойство),
				"УникальныйИдентификаторСвойства");
			Если СоответствиеРеквизита = Неопределено Тогда
				Продолжить;
			КонецЕсли;
			
			ЭтоДопРеквизит = НЕ ТипЗнч(СоответствиеРеквизита.Реквизит) = Тип("Строка");
			
			Если ЭтоДопРеквизит Тогда
				СтрокаДопРеквизит = ДополнительныеРеквизитыОбъекта.Найти(СоответствиеРеквизита.Реквизит);
				Если НЕ СтрокаДопРеквизит = Неопределено Тогда
					СтрокаДопРеквизит.ТекстоваяСтрока = СтрокаДоп.ТекстоваяСтрока;
					Если СоответствиеРеквизита.ТипЗначения.СодержитТип(Тип("СправочникСсылка.ЗначенияСвойствОбъектов")) Тогда
						Значение = Справочники.ЗначенияСвойствОбъектов.ПолучитьСсылку(
							Новый УникальныйИдентификатор(СокрЛП(СтрокаДоп.Значение)));
					ИначеЕсли СоответствиеРеквизита.ТипЗначения.СодержитТип(
								Тип("СправочникСсылка.ЗначенияСвойствОбъектовИерархия")) Тогда
								
						Значение = Справочники.ЗначенияСвойствОбъектовИерархия.ПолучитьСсылку(
							Новый УникальныйИдентификатор(СокрЛП(СтрокаДоп.Значение)));
					Иначе
						Значение = СтрокаДоп.Значение;
					КонецЕсли;
					СтрокаДопРеквизит.Значение = Значение;
				Иначе
					Если СоответствиеРеквизита.ТипЗначения.СодержитТип(Тип("СправочникСсылка.ЗначенияСвойствОбъектов")) Тогда
						Значение = Справочники.ЗначенияСвойствОбъектов.ПолучитьСсылку(
						Новый УникальныйИдентификатор(СокрЛП(СтрокаДоп.Значение)));
					ИначеЕсли СоответствиеРеквизита.ТипЗначения.СодержитТип(
								Тип("СправочникСсылка.ЗначенияСвойствОбъектовИерархия")) Тогда
								
						Значение = Справочники.ЗначенияСвойствОбъектовИерархия.ПолучитьСсылку(
						Новый УникальныйИдентификатор(СокрЛП(СтрокаДоп.Значение)));
					Иначе
						Значение = СтрокаДоп.Значение;
					КонецЕсли;
					Если НЕ ЗначениеЗаполнено(Объект.Ссылка) Тогда
						СтрокаДопРеквизит = ДополнительныеРеквизитыОбъекта.Добавить();
						СтрокаДопРеквизит.Свойство = СоответствиеРеквизита.Реквизит;
						СтрокаДопРеквизит.ТекстоваяСтрока = СтрокаДоп.ТекстоваяСтрока;
						СтрокаДопРеквизит.Значение = Значение;
					Иначе
						Если ЗначениеЗаполнено(Значение) Тогда
							СтрокаДопРеквизит = ДополнительныеРеквизитыОбъекта.Добавить();
							СтрокаДопРеквизит.Свойство = СоответствиеРеквизита.Реквизит;
							СтрокаДопРеквизит.ТекстоваяСтрока = СтрокаДоп.ТекстоваяСтрока;
							СтрокаДопРеквизит.Значение = Значение;
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;
			Иначе
				РеквизитОбъекта = Новый Структура(СокрЛП(СоответствиеРеквизита.Реквизит), СтрокаДоп.Значение);
				ЗаполнитьЗначенияСвойств(Объект, РеквизитОбъекта);
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
КонецПроцедуры

