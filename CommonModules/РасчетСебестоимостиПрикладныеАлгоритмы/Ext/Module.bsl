	НаборЗаписей = РегистрыСведений[ОписаниеРегистра.ИмяРегистра].СоздатьНаборЗаписей();
	
	ИмяПоляПериод = ?(ОписаниеРегистра.ПериодическийРегистр, "Период", "ПериодРегистрации");
	
