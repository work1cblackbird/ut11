	Запрос.МенеджерВременныхТаблиц = ПолучитьМенеджерВТИзКонтейнера(КонтейнерМенеджераВТ);
	
	Запрос.Текст = ПолучитьЗаголовокЗапроса(КоличествоСтрок) + "
