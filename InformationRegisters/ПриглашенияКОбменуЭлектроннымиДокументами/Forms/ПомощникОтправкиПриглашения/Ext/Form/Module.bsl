	ПараметрыОтправки.Вставить("ИмяФайлаСоглашенияНаРоуминг", "");
	ПараметрыОтправки.Вставить("РекомендацияПоНастройке", "");
	ПараметрыОтправки.Вставить("ИдентификаторОрганизации", "");
	ПараметрыОтправки.Вставить("ИдентификаторКонтрагента", "");
	ПараметрыОтправки.Вставить("СписокИдентификаторовКонтрагента", Новый СписокЗначений);
	ПараметрыОтправки.Вставить("КонтрагентИНН", "");
	ПараметрыОтправки.Вставить("КонтрагентКПП", "");
	ПараметрыОтправки.Вставить("СтатусПриглашенияПредставление", "");
	ПараметрыОтправки.Вставить("НавигационнаяСсылкаНаПриглашение", "");
	ПараметрыОтправки.Вставить("КартинкаСтатусаПодключения", Неопределено);
	ПараметрыОтправки.Вставить("ВариантПотребностиСоглашения",
		Перечисления.ВариантыПотребностиСоглашенияНаРоуминг.ПустаяСсылка());
	ПараметрыОтправки.Вставить("СвязьДоступна", 0);
	ПараметрыОтправки.Вставить("Абоненты", Новый СписокЗначений);
	ПараметрыОтправки.Вставить("ТребуетсяСоглашениеПриПервомПодключении", Ложь);
	ПараметрыОтправки.Вставить("ОбязательнаяОтправкаЗаявкиНаРоуминг", Ложь);
	ПараметрыОтправки.Вставить("ЗаявкаНаРоумингПринята", Ложь);
	ПараметрыОтправки.Вставить("ПриглашениеОтправлено", Ложь);
	ПараметрыОтправки.Вставить("ТипИнформацииОКонтрагенте", "");
	ПараметрыОтправки.Вставить("ЭтоОблачныйЭДО", Ложь);
	
	Если Не ЗначениеЗаполнено(ПараметрыСвязиИдентификаторов) Тогда
		Возврат ПараметрыОтправки;
	КонецЕсли;
	
	СтрокаПараметровСвязи = ПараметрыСвязиИдентификаторов[0];
	
	ЗаполнитьЗначенияСвойств(ПараметрыОтправки, СтрокаПараметровСвязи);
	
	ПараметрыОтправки.РоумингБезАвтоматическойНастройки = СтрокаПараметровСвязи.СвязьДоступна = 0
		Или СтрокаПараметровСвязи.ОбязательнаяОтправкаЗаявкиНаРоуминг
		Или (СтрокаПараметровСвязи.ТребуетсяСоглашениеПриПервомПодключении И Не СтрокаПараметровСвязи.ЗаявкаНаРоумингПринята);
	ПараметрыОтправки.СписокИдентификаторовКонтрагента  = СтрокаПараметровСвязи.СписокВыбора;
	
	Если ЗначениеЗаполнено(ПараметрыОтправки.СписокИдентификаторовКонтрагента) Тогда
		ПараметрыОтправки.ТипИнформацииОКонтрагенте = ТипыИнформацииОКонтрагенте().ИдентификаторЭДО;
	Иначе
		ПараметрыОтправки.ТипИнформацииОКонтрагенте = ТипИнформацииОКонтрагенте;
	КонецЕсли;
	
	ПараметрыОпределенияТипаПриглашения = НовыеПараметрыОпределенияТипаПриглашения();
	ЗаполнитьЗначенияСвойств(ПараметрыОпределенияТипаПриглашения, ПараметрыОтправки);
	
	ТипПриглашения = ТипПриглашения(ПараметрыОпределенияТипаПриглашения);
	
	ЗаполнитьПредупреждениеПоПараметрамСвязи(ПараметрыОтправки, СтрокаПараметровСвязи, ТипПриглашения);
	
	ПараметрыОтправки.КартинкаСтатусаПодключения = СинхронизацияЭДО.КартинкаСтатусаПодключенияАбонента(
		СтрокаПараметровСвязи.СтатусПодключения);
	Возврат ПараметрыОтправки;
	
