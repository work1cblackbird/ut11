	ПараметрыОтправки.Вставить("ИдентификаторКонтрагентаОписание", "");
	ПараметрыОтправки.Вставить("РоумингБезАвтоматическойНастройки", Ложь);
	ПараметрыОтправки.Вставить("ОтправкаТолькоНаИдентификаторЭДО", Ложь);
