// Возвращает структуру полей записи этого регистра сведений.
//
// Возвращаемое значение:
//   Структура - структура с ключами, повторяющими все измерения, ресурсы и реквизиты.
//
Функция НовыйОписательЗаписи() Экспорт

	Результат = Новый Структура;
		Результат.Вставить("КатегорияНовостейСтрока", ""); // Строка (100)
		Результат.Вставить("ЗначениеКатегорииНовостейСтрока", ""); // Строка (100)
		Результат.Вставить("ЛентаНовостей"          , Справочники.ЛентыНовостей.ПустаяСсылка());
		Результат.Вставить("УИННовости"             , ""); // Строка (240) // Уменьшено с 255 до 240, чтобы общая длина индекса не превышала 900 байт (ограничение MS SQL Server)
		Результат.Вставить("УсловиеОтбора"          , ""); // Строка (2)

	Возврат Результат;

