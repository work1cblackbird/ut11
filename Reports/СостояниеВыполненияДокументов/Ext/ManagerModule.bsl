		СтруктураПараметров.Вставить("ИмяДокумента", ОбщегоНазначенияУТ.ПолучитьПредставлениеДокумента(Выборка.Ссылка, 
		Выборка.НомерДокумента, 
		Выборка.ДатаДокумента));
	КонецЕсли;
