	Результат.Заголовок.ДатаКонца = ?(Результат.Заголовок.ДатаКонца = Неопределено,
									КонецДня(ДанныеОперации.Дата),
									Макс(Результат.Заголовок.ДатаКонца, КонецДня(ДанныеОперации.Дата)));
									
