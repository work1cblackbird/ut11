						<v8:item>
							<v8:lang>ru</v8:lang>
							<v8:content>Без групп номенклатуры</v8:content>
						</v8:item>
					</dcsset:presentation>
					<dcsset:viewMode>Inaccessible</dcsset:viewMode>
