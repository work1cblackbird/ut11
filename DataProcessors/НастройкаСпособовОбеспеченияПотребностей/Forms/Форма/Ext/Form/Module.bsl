			КонецЕсли;
			Возврат;
		КонецЕсли;
		
	КонецЕсли;
		
	Если ПараметрыВыполненияКоманды.Имя = "СписокПодразделенийИзменитьСклад" Тогда
		
		ВыбранныеСтроки = Новый Массив();
