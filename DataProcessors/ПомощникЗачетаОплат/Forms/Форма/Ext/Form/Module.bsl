Процедура ЗачестьПодарочныеСертификатыНаСервере(АдресТабличнойЧастиПодарочныеСертификаты)
	
	ПодобранныеПодарочныеСертификаты = ПолучитьИзВременногоХранилища(АдресТабличнойЧастиПодарочныеСертификаты); // - ТаблицаЗначений
	ПодобранныеПодарочныеСертификаты.Колонки.Добавить("СуммаВВалютеПлатежа");
	
	РаспределитьОстаток = (Недостает > 0);
	
	// Если в подборе очистили ранее подобранные сертификаты, то нужно их очистить и из таблицы Зачтено
	МассивСтрокДляУдаления = Новый Массив;
	Для Каждого СтрокаЗачтено Из Зачтено Цикл
		Если Не ЗначениеЗаполнено(СтрокаЗачтено.Документ) 
			И ТипЗнч(СтрокаЗачтено.Объект) = Тип("СправочникСсылка.ПодарочныеСертификаты") Тогда
			СтруктураПоиска = Новый Структура("ПодарочныйСертификат", СтрокаЗачтено.Объект);
			Если ПодобранныеПодарочныеСертификаты.НайтиСтроки(СтруктураПоиска).Количество()=0 Тогда
				МассивСтрокДляУдаления.Добавить(СтрокаЗачтено);
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	Для Каждого СтрокаДляУдаления Из МассивСтрокДляУдаления Цикл
		Зачтено.Удалить(СтрокаДляУдаления);
	КонецЦикла;
		
	СтруктураПоиска = Новый Структура("Объект, Партнер");
	СтруктураПоиска.Вставить("ОбъектРасчетов");
	
	Для Каждого СтрокаТаблицы Из ПодобранныеПодарочныеСертификаты Цикл
		
		ЗаполнитьЗначенияСвойств(СтруктураПоиска, СтрокаТаблицы);
		СтруктураПоиска.Объект = СтрокаТаблицы.ПодарочныйСертификат;
		ЗачтенныеСтроки = Зачтено.НайтиСтроки(СтруктураПоиска);
		
		Если ЗачтенныеСтроки.Количество() = 0 Тогда
			СтрокаЗачета = Зачтено.Добавить();
			СтрокаЗачета.Организация = Организация;
			СтрокаЗачета.Валюта = Валюта;
			СтрокаЗачета.ВалютаВзаиморасчетов = ВалютаВзаиморасчетов;
			СтрокаЗачета.Объект = СтрокаТаблицы.ПодарочныйСертификат;
			ЗаполнитьЗначенияСвойств(СтрокаЗачета, СтрокаТаблицы, , "СуммаВВалютеПлатежа");
			СтрокаЗачета.ДоступноРедактирование = Ложь;
		Иначе
			СтрокаЗачета = ЗачтенныеСтроки[0];
		КонецЕсли;
		
		СтрокаТаблицы.СуммаВВалютеПлатежа = СтрокаТаблицы.Сумма;
		
		СтрокаЗачета.ДанныеИзменены = Истина;
		
		СтрокаЗачета.СуммаЗачтено        = СтрокаТаблицы.Сумма;
		СтрокаЗачета.СуммаВВалютеПлатежа = СтрокаТаблицы.СуммаВВалютеПлатежа;
		
		СтрокаЗачета.СуммаРегл 			 = СтрокаТаблицы.СуммаВВалютеПлатежа;
		СтрокаЗачета.СуммаУпр 			 = СтрокаТаблицы.СуммаВВалютеПлатежа;
		Если ВалютаВзаиморасчетов <> ВалютаРегламентированногоУчета Тогда
			СтрокаЗачета.СуммаРегл = РаботаСКурсамиВалютУТ.ПересчитатьСуммуДокументаВВалюту(
				СтрокаТаблицы.СуммаВВалютеПлатежа, ВалютаВзаиморасчетов, ВалютаРегламентированногоУчета, ДатаДокумента, ВалютаРегламентированногоУчета);
		КонецЕсли;			
		Если ВалютаВзаиморасчетов <> ВалютаУправленческогоУчета Тогда
			СтрокаЗачета.СуммаУпр = РаботаСКурсамиВалютУТ.ПересчитатьСуммуДокументаВВалюту(
				СтрокаТаблицы.СуммаВВалютеПлатежа, ВалютаВзаиморасчетов, ВалютаУправленческогоУчета, ДатаДокумента, ВалютаРегламентированногоУчета);
		КонецЕсли;
				
	КонецЦикла;
	
	Зачтено.Сортировать("Организация, РасшифровкаОбъектаРасчетов ВОЗР");
	
	РассчитатьСуммуЗачета();
	РасчитатьКоличествоСтрок();
	
