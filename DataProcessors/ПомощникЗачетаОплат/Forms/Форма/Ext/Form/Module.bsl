		Если ТипЗнч(СтрокаЗачтено.Объект) = Тип("СправочникСсылка.ПодарочныеСертификаты")
			И Не ЗначениеЗаполнено(СтрокаЗачтено.Документ) Тогда
			НоваяСтрока = ТаблицаЗачтенныхПодарочныхСертификатов.Добавить();
			НоваяСтрока.ПодарочныйСертификат = СтрокаЗачтено.Объект;
			НоваяСтрока.Сумма = СтрокаЗачтено.СуммаЗачтено;
