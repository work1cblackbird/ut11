
#Область ОбработчикиСобытийФормы

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Если Параметры.Свойство("АвтоТест") Тогда // Возврат при получении формы для анализа.
		Возврат;
	КонецЕсли;

	Если Параметры.КодУровняЗапаса = 0 Тогда
		Любой = 1;
	ИначеЕсли Параметры.КодУровняЗапаса = 1 Тогда
		СрочноКЗаказу = 1;
	ИначеЕсли Параметры.КодУровняЗапаса = 2 Тогда
		БлизкоКЗаказу = 1;
	ИначеЕсли Параметры.КодУровняЗапаса = 3 Тогда
		КОтменеЗаказа = 1;
	ИначеЕсли Параметры.КодУровняЗапаса = 4 Тогда
		МеньшеПоловины = 1;
	ИначеЕсли Параметры.КодУровняЗапаса = 5 Тогда
		БольшеПоловины = 1;
	ИначеЕсли Параметры.КодУровняЗапаса = 6 Тогда
		Избыток = 1;
	КонецЕсли;
	
	Картинка = Истина;

КонецПроцедуры

#КонецОбласти

