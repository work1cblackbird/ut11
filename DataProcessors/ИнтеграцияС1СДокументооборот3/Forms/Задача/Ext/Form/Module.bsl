	ОбновитьПредпросмотр();
	
	// Сохраним текущее состояние дерева приложений.
	ТипДерева = ИнтеграцияС1СДокументооборот3Клиент.ТипДерева();
	ТипДерева.ЭтоДеревоПриложений = Истина;
	СостояниеДереваПриложений = ИнтеграцияС1СДокументооборот3Клиент.ТекущееСостояниеДерева(
		ТипДерева,
		ДеревоПриложений.ПолучитьЭлементы(),
		Элементы.ДеревоПриложений);
	
КонецПроцедуры

&НаКлиенте
Функция ОбновитьПриложениеПоID(Знач ПриложениеID, ПараметрыОбновленияПриложения)
	
	ОбновлениеВыполнено = Ложь;
	
	НайденныеСтроки = ВсеПриложенияВДеревеЗначений(
		ДеревоПриложений.ПолучитьЭлементы(),
		ПриложениеID,
		ПараметрыОбновленияПриложения.ПриложениеТип);
	
	Для Каждого НайденнаяСтрока Из НайденныеСтроки Цикл
		
		Если ПараметрыОбновленияПриложения.РеквизитыКОбновлению <> Неопределено Тогда
			СтрокаДокумента = ИнтеграцияС1СДокументооборот3КлиентСервер.СтрокаДокументаВДеревеПриложений(НайденнаяСтрока);
			Если СтрокаДокумента <> Неопределено Тогда
				ИнтеграцияС1СДокументооборотБазоваяФункциональностьКлиентСервер.ЗаполнитьНДПСизСтруктуры(
					СтрокаДокумента,
					ПараметрыОбновленияПриложения.НДПС);
			КонецЕсли;
			
			ЗаполнитьЗначенияСвойств(НайденнаяСтрока, ПараметрыОбновленияПриложения.РеквизитыКОбновлению);
			
			ОбновитьДеревоВХранилище(ПриложениеID, ПараметрыОбновленияПриложения);
		КонецЕсли;
		
		Если ПараметрыОбновленияПриложения.РеквизитыКЧтению <> Неопределено Тогда
			ЗаполнитьЗначенияСвойств(ПараметрыОбновленияПриложения.РеквизитыКЧтению, НайденнаяСтрока);
		КонецЕсли;
		
		ОбновлениеВыполнено = Истина;
		
	КонецЦикла;
	
	Возврат ОбновлениеВыполнено;
	
КонецФункции

