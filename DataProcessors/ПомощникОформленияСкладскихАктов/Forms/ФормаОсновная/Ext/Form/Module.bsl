			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения, СкладскойАкт.Ссылка);
			ЗаписьЖурналаРегистрации(НСтр("ru = 'Оформление складских актов'", КодОсновногоЯзыка),
				УровеньЖурналаРегистрации.Ошибка, , ,
				ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
