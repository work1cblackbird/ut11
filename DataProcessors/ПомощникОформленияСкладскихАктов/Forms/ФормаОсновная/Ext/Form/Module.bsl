		ОтборСтрок  = Новый Структура("Склад", Объект.Склад);
		МассивСтрок = ВыбранныеВладельцыПоСкладам.НайтиСтроки(ОтборСтрок);
		
		Для Каждого Строка Из МассивСтрок Цикл
			ВыбранныеВладельцыПоСкладам.Удалить(Строка);
		КонецЦикла;
	Иначе
		ВыбранныеВладельцыПоСкладам = Новый ТаблицаЗначений();
		ВыбранныеВладельцыПоСкладам.Колонки.Добавить("Склад",       Новый ОписаниеТипов("СправочникСсылка.Склады"));
