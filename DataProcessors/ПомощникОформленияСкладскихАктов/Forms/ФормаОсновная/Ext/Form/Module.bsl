		Отбор.Вставить("ЦенаОприходования",			СтрокаПорчиПересортицы.ЦенаОприходования);
		Отбор.Вставить("СтавкаНДС",					СтрокаПорчиПересортицы.СтавкаНДС);
		МассивСтрок = Объект.Товары.НайтиСтроки(Отбор);
