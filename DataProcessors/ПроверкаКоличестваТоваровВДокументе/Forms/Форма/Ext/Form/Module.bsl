		Возврат Ложь;
	КонецЕсли;
	
	ОбработкаОбъект = РеквизитФормыВЗначение("Объект");
	ПроверкаПройдена = ОбработкаОбъект.ЗавершитьПроверку(
		СкладыКлиентСервер.УчитываемыеПриПроверкеРасходногоОрдераПоля(ЭтаФорма, Неопределено), ПереноситьРезультатВОрдер);
	ЗначениеВРеквизитФормы(ОбработкаОбъект, "Объект");
	
	Элементы.ГруппаНеотгружаемые.Видимость = Объект.Неотгружаемые.Количество() <> 0;
	Элементы.ГруппаНедобор.Видимость = Объект.Недобор.Количество() <> 0;
	
	Возврат ПроверкаПройдена;
	
КонецФункции

&НаКлиенте
Функция ЗавершитьПроверкуКлиент(Закрывать = Истина)
	
	ОчиститьСообщения();
	
	Если Не ОбработкаОрдераНаПеремещение
		И Не СтатусОрдераВыбран Тогда
		
		Если ЗавершитьПроверкуСервер(Ложь) Тогда
			
			ПараметрыФормы = Новый Структура("Ордер, ОтгрузкаПоЗаданиюНаПеревозку, ЗаданиеНаПеревозку",
				Объект.Ордер, Объект.ОтгрузкаПоЗаданиюНаПеревозку, Объект.ЗаданиеНаПеревозку);
			
			ОписаниеОповещения = Новый ОписаниеОповещения("ВыборДействияПослеПроверкиОрдераЗавершение", ЭтотОбъект);
			
			ОткрытьФорму("Обработка.ПроверкаКоличестваТоваровВДокументе.Форма.ФормаВыбораДействияПослеПроверкиОрдера",
				ПараметрыФормы, ЭтотОбъект, , , , ОписаниеОповещения, РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
			
			Возврат Ложь;
			
		Иначе
			
			Если Объект.Неотгружаемые.Количество() > 0
				Или Объект.Недобор.Количество() > 0 Тогда
				
				ПроверкаПройдена = Истина;
				
			Иначе
				ПроверкаПройдена = Ложь;
			КонецЕсли;
			
		КонецЕсли;
		
	Иначе
		
		ПереноситьРезультатВОрдер = ОбработкаОрдераНаПеремещение
			Или Объект.СтатусОрдера = ПредопределенноеЗначение("Перечисление.СтатусыРасходныхОрдеров.Проверен")
			Или (Объект.СтатусОрдера = ПредопределенноеЗначение("Перечисление.СтатусыРасходныхОрдеров.КОтгрузке")
				И Не Объект.ОтгрузкаПоЗаданиюНаПеревозку)
			Или (Объект.СтатусОрдера = ПредопределенноеЗначение("Перечисление.СтатусыРасходныхОрдеров.КОтгрузке")
				И Объект.ОтгрузкаПоЗаданиюНаПеревозку
				И ЗначениеЗаполнено(Объект.ЗаданиеНаПеревозку));
		
		Если ПереноситьРезультатВОрдер Тогда
			ПроверкаПройдена = ЗавершитьПроверкуСервер(Истина);
		Иначе
			
			Если ЗавершитьПроверкуСервер(Ложь) Тогда
				
				ПараметрыФормы = Новый Структура("Ордер", Объект.Ордер);
				
				ДополнительныеПараметры = Новый Структура("Закрывать", Закрывать);
				ОписаниеОповещения      = Новый ОписаниеОповещения("ВыборЗаданияНаПеревозкуЗавершение", ЭтотОбъект,
					ДополнительныеПараметры);
				
				ОткрытьФорму("Документ.РасходныйОрдерНаТовары.Форма.ФормаВыбораЗаданияНаПеревозку", ПараметрыФормы,
					ЭтотОбъект, , , , ОписаниеОповещения, РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
				
				Возврат Ложь;
				
			Иначе
				
				Если Объект.Неотгружаемые.Количество() > 0
					Или Объект.Недобор.Количество() > 0 Тогда
					
					ПроверкаПройдена = Истина;
					
				Иначе
					ПроверкаПройдена = Ложь;
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЕсли;
	
	Если Не ПроверкаПройдена Тогда
		Возврат Ложь;
	КонецЕсли;
	
	Если Объект.Неотгружаемые.Количество() > 0
		Или Объект.Недобор.Количество() > 0 Тогда
		
		Элементы.СтраницыФормы.ТекущаяСтраница    = Элементы.СтраницаОшибки;
		Элементы.ОтразитьВУчете.КнопкаПоУмолчанию = Истина;
		
		Возврат Ложь;
		
	КонецЕсли;
	
	Если ОбработкаОрдераНаПеремещение Тогда
		Оповестить("Запись_ОрдерНаПеремещениеТоваров",Новый Структура,Объект.Ордер);
	Иначе
		Оповестить("Запись_РасходныйОрдерНаТовары",Новый Структура,Объект.Ордер);
	КонецЕсли;
	
	ПроверкаЗавершена = Истина;
	
	Если Закрывать Тогда
		Закрыть();
	КонецЕсли;
	
	Возврат Истина;
	
КонецФункции

&НаКлиенте
Процедура ВыборЗаданияНаПеревозкуЗавершение(Результат, ДополнительныеПараметры) Экспорт
	
	Если ЗначениеЗаполнено(Результат) Тогда
		Объект.ЗаданиеНаПеревозку = Результат;
		
		Если Элементы.СтраницыФормы.ТекущаяСтраница = Элементы.СтраницаОшибки Тогда
			ОтразитьРасхожденияВУчетеКлиент();
		Иначе
			ЗавершитьПроверкуКлиент(ДополнительныеПараметры.Закрывать);
		КонецЕсли;
	Иначе
		ПропуститьВопросПередЗакрытием = Ложь;
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ОтразитьРасхожденияВУчетеКлиент(Закрывать = Истина)
	
	ОчиститьСообщения();
	
	Если Элементы.ГруппаНедобор.Видимость
		И Объект.ВариантУчетаНедобора = "Добрать" Тогда
		
		ОтражениеВыполнено = ОтразитьРасхожденияВУчетеСервер();
		
	Иначе
		
		Отбор = Новый Структура("Неотгружать", 1);
		НеотгружаемыеТовары = Объект.Товары.НайтиСтроки(Отбор);
		
		Если НеотгружаемыеТовары.Количество() = Объект.Товары.Количество() Тогда
			
			ОтражениеВыполнено = ОтразитьРасхожденияВУчетеСервер();
			
		ИначеЕсли Не ОбработкаОрдераНаПеремещение
			И Не СтатусОрдераВыбран Тогда
			
			ПараметрыФормы = Новый Структура("Ордер, ОтгрузкаПоЗаданиюНаПеревозку, ЗаданиеНаПеревозку",
				Объект.Ордер, Объект.ОтгрузкаПоЗаданиюНаПеревозку, Объект.ЗаданиеНаПеревозку);
			
			ОписаниеОповещения = Новый ОписаниеОповещения("ВыборДействияПослеПроверкиОрдераЗавершение", ЭтотОбъект);
			
			ОткрытьФорму("Обработка.ПроверкаКоличестваТоваровВДокументе.Форма.ФормаВыбораДействияПослеПроверкиОрдера",
				ПараметрыФормы, ЭтотОбъект, , , , ОписаниеОповещения, РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
			
			Возврат;
			
		Иначе
			
			ПереноситьРезультатВОрдер = ОбработкаОрдераНаПеремещение
				Или Объект.СтатусОрдера = ПредопределенноеЗначение("Перечисление.СтатусыРасходныхОрдеров.Проверен")
				Или (Объект.СтатусОрдера = ПредопределенноеЗначение("Перечисление.СтатусыРасходныхОрдеров.КОтгрузке")
					И Не Объект.ОтгрузкаПоЗаданиюНаПеревозку)
				Или (Объект.СтатусОрдера = ПредопределенноеЗначение("Перечисление.СтатусыРасходныхОрдеров.КОтгрузке")
					И Объект.ОтгрузкаПоЗаданиюНаПеревозку
					И ЗначениеЗаполнено(Объект.ЗаданиеНаПеревозку));
			
			Если ПереноситьРезультатВОрдер Тогда
				ОтражениеВыполнено = ОтразитьРасхожденияВУчетеСервер();
			Иначе
				
				ПараметрыФормы = Новый Структура("Ордер", Объект.Ордер);
				
				ДополнительныеПараметры = Новый Структура("Закрывать", Закрывать);
				ОписаниеОповещения      = Новый ОписаниеОповещения("ВыборЗаданияНаПеревозкуЗавершение", ЭтотОбъект,
					ДополнительныеПараметры);
				
				ОткрытьФорму("Документ.РасходныйОрдерНаТовары.Форма.ФормаВыбораЗаданияНаПеревозку", ПараметрыФормы,
					ЭтотОбъект, , , , ОписаниеОповещения, РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
				
				Возврат;
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЕсли;
	
	Если ОтражениеВыполнено Тогда
		
		Если ОбработкаОрдераНаПеремещение Тогда
			Оповестить("Запись_ОрдерНаПеремещениеТоваров",Новый Структура,Объект.Ордер);
		Иначе
			Оповестить("Запись_РасходныйОрдерНаТовары",Новый Структура,Объект.Ордер);
		КонецЕсли;
		
		ПроверкаЗавершена = Истина;
		
		Если Закрывать Тогда
			Закрыть();
		КонецЕсли;
		
	КонецЕсли;
	
