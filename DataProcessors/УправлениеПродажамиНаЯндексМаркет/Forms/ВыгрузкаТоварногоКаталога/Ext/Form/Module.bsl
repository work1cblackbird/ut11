		ПараметрыОткрытия.Вставить("УчетнаяЗапись", УчетнаяЗапись);

		ОткрытьФорму("РегистрСведений.СтатусыПубликацииТоваровЯндексМаркет.Форма.ФормаЗаписи", 
			ПараметрыОткрытия,
